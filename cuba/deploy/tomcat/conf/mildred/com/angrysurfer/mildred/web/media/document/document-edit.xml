<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://editorCaption"
        class="com.angrysurfer.mildred.web.media.document.DocumentEdit"
        datasource="documentDs"
        focusComponent="fieldGroup"
        messagesPack="com.angrysurfer.mildred.web.media.document">
    <dsContext>
        <datasource id="documentDs"
                    class="com.angrysurfer.mildred.entity.media.Document"
                    view="Document-screen-view"/>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout expand="windowActions"
            spacing="true">
        <fieldGroup id="fieldGroup"
                    datasource="documentDs"
                    width="1200px">
            <column width="100%">
                <field property="id"
                       width="200px"/>
                <field property="fileType"
                       width="200px"/>
                <field property="documentType"
                       width="200px"/>
                <field property="absolutePath"/>
                <field property="effectiveDt"
                       width="200px"/>
                <field property="expirationDt"
                       width="200px"/>
            </column>
        </fieldGroup>
        <frame id="windowActions"
               screen="editWindowActions"/>
    </layout>
</window>
