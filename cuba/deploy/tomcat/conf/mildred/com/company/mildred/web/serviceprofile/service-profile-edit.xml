<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://editorCaption"
        class="com.company.mildred.web.serviceprofile.ServiceProfileEdit"
        datasource="serviceProfileDs"
        focusComponent="fieldGroup"
        messagesPack="com.company.mildred.web.serviceprofile">
    <dsContext>
        <datasource id="serviceProfileDs"
                    class="com.company.mildred.entity.ServiceProfile"
                    view="ServiceProfile-screen-view">
            <collectionDatasource id="switchRuleDs"
                                  property="switchRule"/>
        </datasource>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout expand="switchRuleBox"
            spacing="true">
        <fieldGroup id="fieldGroup"
                    datasource="serviceProfileDs">
            <column width="450px">
                <field property="startupServiceDispatch"/>
                <field property="name"/>
            </column>
        </fieldGroup>
        <groupBox id="switchRuleBox"
                  caption="msg://com.company.mildred.entity/ServiceProfile.switchRule">
            <table id="switchRuleTable"
                   height="100%"
                   multiselect="true"
                   width="100%">
                <actions>
                    <action id="add"/>
                    <action id="remove"/>
                </actions>
                <columns>
                    <column id="beginMode"/>
                    <column id="endMode"/>
                    <column id="beforeDispatch"/>
                    <column id="afterDispatch"/>
                    <column id="conditionDispatch"/>
                </columns>
                <rows datasource="switchRuleDs"/>
                <buttonsPanel>
                    <button action="switchRuleTable.add"/>
                    <button action="switchRuleTable.remove"/>
                </buttonsPanel>
            </table>
        </groupBox>
        <frame id="windowActions"
               screen="editWindowActions"/>
    </layout>
</window>
