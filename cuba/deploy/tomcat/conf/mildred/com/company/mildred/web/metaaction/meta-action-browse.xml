<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://browseCaption"
        class="com.company.mildred.web.metaaction.MetaActionBrowse"
        focusComponent="metaActionsTable"
        lookupComponent="metaActionsTable"
        messagesPack="com.company.mildred.web.metaaction">
    <dsContext>
        <groupDatasource id="metaActionsDs"
                         class="com.company.mildred.entity.MetaAction"
                         view="metaAction-metaReason-view">
            <query>
                <![CDATA[select e from mildred$MetaAction e]]>
            </query>
        </groupDatasource>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout expand="metaActionsTable"
            spacing="true">
        <filter id="filter"
                applyTo="metaActionsTable"
                datasource="metaActionsDs">
            <properties include=".*"/>
        </filter>
        <groupTable id="metaActionsTable"
                    width="100%">
            <actions>
                <action id="create"/>
                <action id="edit"/>
                <action id="remove"/>
            </actions>
            <columns>
                <column id="name"
                        caption="msg://name"/>
                <column id="documentType"
                        caption="msg://documentType"/>
                <column id="dispatch"
                        caption="msg://dispatch"/>
                <column id="priority"
                        caption="msg://priority"/>
            </columns>
            <rows datasource="metaActionsDs"/>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn"
                        action="metaActionsTable.create"/>
                <button id="editBtn"
                        action="metaActionsTable.edit"/>
                <button id="removeBtn"
                        action="metaActionsTable.remove"/>
            </buttonsPanel>
        </groupTable>
    </layout>
</window>
