<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://editorCaption"
        class="com.company.mildred.web.metaaction.MetaActionEdit"
        datasource="metaActionDs"
        focusComponent="fieldGroup"
        messagesPack="com.company.mildred.web.metaaction">
    <dsContext>
        <datasource id="metaActionDs"
                    class="com.company.mildred.entity.MetaAction"
                    view="metaAction-metaReason-view">
            <collectionDatasource id="metaReasonDs"
                                  property="metaReason"/>
        </datasource>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout expand="windowActions"
            spacing="true">
        <fieldGroup id="fieldGroup"
                    datasource="metaActionDs">
            <column width="250px">
                <field caption="msg://name"
                       property="name"/>
                <field caption="msg://documentType"
                       property="documentType"/>
                <field caption="msg://dispatch"
                       property="dispatch"/>
                <field caption="msg://priority"
                       property="priority"/>
            </column>
        </fieldGroup>
        <groupBox id="metaReasonBox"
                  caption="msg://com.company.mildred.entity/MetaAction.metaReason">
            <table id="metaReasonTable"
                   height="200px"
                   width="100%">
                <actions>
                    <action id="add"/>
                    <action id="remove"/>
                </actions>
                <columns>
                    <column id="name"
                            caption="msg://name"/>
                    <column id="documentType"
                            caption="msg://documentType"/>
                    <column id="weight"
                            caption="msg://weight"/>
                    <column id="expectedResult"
                            caption="msg://expectedResult"/>
                </columns>
                <rows datasource="metaReasonDs"/>
                <buttonsPanel>
                    <button action="metaReasonTable.add"/>
                    <button action="metaReasonTable.remove"/>
                </buttonsPanel>
            </table>
        </groupBox>
        <frame id="windowActions"
               screen="editWindowActions"/>
    </layout>
</window>
