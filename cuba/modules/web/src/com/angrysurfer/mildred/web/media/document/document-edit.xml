<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://editorCaption"
        class="com.angrysurfer.mildred.web.media.document.DocumentEdit"
        datasource="documentDs"
        focusComponent="fieldGroup"
        messagesPack="com.angrysurfer.mildred.web.media.document">
    <dsContext>
        <datasource id="documentDs"
                    class="com.angrysurfer.mildred.entity.media.Document"
                    view="Document-screen-view"/>
        <collectionDatasource id="fileTypesDs"
                              class="com.angrysurfer.mildred.entity.media.FileType"
                              view="_minimal">
            <query>
                <![CDATA[select e from mildred$FileType e]]>
            </query>
        </collectionDatasource>
    </dsContext>
    <dialogMode height="300"
                width="650"/>
    <layout expand="fieldGroup"
            spacing="true">
        <fieldGroup id="fieldGroup"
                    datasource="documentDs">
            <column width="550px">
                <field caption="id"
                       property="id"
                       width="250px"/>
                <field caption="path"
                       property="absolutePath"
                       rows="3"/>
                <field caption="doc type"
                       property="documentType"
                       width="250px"/>
                <field caption="file type"
                       optionsDatasource="fileTypesDs"
                       property="fileType"
                       width="250px"/>
                <field caption="as of"
                       property="effectiveDt"
                       width="250px"/>
                <field caption="until"
                       property="expirationDt"
                       width="250px"/>
            </column>
        </fieldGroup>
        <frame id="windowActions"
               align="MIDDLE_RIGHT"
               screen="editWindowActions"
               width="AUTO"/>
    </layout>
</window>
