<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://caption"
        class="com.angrysurfer.mildred.web.matchrecord.MatchRecordBrowse"
        focusComponent="table"
        lookupComponent="table"
        messagesPack="com.angrysurfer.mildred.web.matchrecord">
    <dsContext>
        <datasource id="matchRecordDs"
                    class="com.angrysurfer.mildred.entity.MatchRecord"
                    view="_local">
            <datasource id="idDs"
                        property="id"/>
        </datasource>
        <groupDatasource id="matchRecordsDs"
                         class="com.angrysurfer.mildred.entity.MatchRecord"
                         view="_local">
            <query>
                <![CDATA[select e from mildred$MatchRecord e]]>
            </query>
        </groupDatasource>
    </dsContext>
    <actions>
        <action id="save"
                caption="mainMsg://actions.Ok"
                icon="icons/ok.png"
                invoke="save"
                shortcut="CTRL-ENTER"/>
        <action id="cancel"
                caption="mainMsg://actions.Cancel"
                description="Esc"
                icon="icons/cancel.png"
                invoke="cancel"/>
    </actions>
    <dialogMode height="600"
                width="800"/>
    <layout>
        <split id="split"
               height="100%"
               orientation="horizontal"
               reversePosition="true"
               width="100%">
            <vbox id="lookupBox"
                  expand="table"
                  height="100%"
                  margin="false,true,false,false"
                  spacing="true">
                <filter id="filter"
                        applyTo="table"
                        datasource="matchRecordsDs">
                    <properties include=".*"/>
                </filter>
                <groupTable id="table"
                            width="100%">
                    <actions>
                        <action id="create"/>
                        <action id="edit"/>
                        <action id="remove"/>
                    </actions>
                    <columns>
                        <column id="matcherName"/>
                        <column id="isExtMatch"/>
                        <column id="score"/>
                        <column id="maxScore"/>
                        <column id="minScore"/>
                        <column id="comparisonResult"/>
                        <column id="fileParent"/>
                        <column id="fileName"/>
                        <column id="matchParent"/>
                        <column id="matchFileName"/>
                        <column id="id.doc"/>
                        <column id="id.matchDoc"/>
                    </columns>
                    <rows datasource="matchRecordsDs"/>
                    <rowsCount/>
                    <buttonsPanel id="buttonsPanel"
                                  alwaysVisible="true">
                        <button id="createBtn"
                                action="table.create"/>
                        <button id="editBtn"
                                action="table.edit"/>
                        <button id="removeBtn"
                                action="table.remove"/>
                    </buttonsPanel>
                </groupTable>
            </vbox>
            <vbox id="editBox"
                  expand="fieldGroupBox"
                  height="100%"
                  margin="false,false,false,true"
                  spacing="true">
                <scrollBox id="fieldGroupBox">
                    <fieldGroup id="fieldGroup"
                                datasource="matchRecordDs">
                        <column width="250px">
                            <field property="matcherName"/>
                            <field property="isExtMatch"/>
                            <field property="score"/>
                            <field property="maxScore"/>
                            <field property="minScore"/>
                            <field property="comparisonResult"/>
                            <field property="fileParent"/>
                            <field property="fileName"/>
                            <field property="matchParent"/>
                            <field property="matchFileName"/>
                            <field datasource="idDs"
                                   property="doc"/>
                            <field datasource="idDs"
                                   property="matchDoc"/>
                        </column>
                    </fieldGroup>
                </scrollBox>
                <hbox id="actionsPane"
                      spacing="true"
                      visible="false">
                    <button id="saveBtn"
                            action="save"/>
                    <button id="cancelBtn"
                            action="cancel"/>
                </hbox>
            </vbox>
        </split>
    </layout>
</window>
