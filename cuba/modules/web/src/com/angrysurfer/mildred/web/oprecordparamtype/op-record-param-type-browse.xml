<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://browseCaption"
        class="com.angrysurfer.mildred.web.oprecordparamtype.OpRecordParamTypeBrowse"
        focusComponent="opRecordParamTypesTable"
        lookupComponent="opRecordParamTypesTable"
        messagesPack="com.angrysurfer.mildred.web.oprecordparamtype">
    <dsContext>
        <groupDatasource id="opRecordParamTypesDs"
                         class="com.angrysurfer.mildred.entity.OpRecordParamType"
                         view="_local">
            <query>
                <![CDATA[select e from mildred$OpRecordParamType e]]>
            </query>
        </groupDatasource>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout expand="opRecordParamTypesTable"
            spacing="true">
        <filter id="filter"
                applyTo="opRecordParamTypesTable"
                datasource="opRecordParamTypesDs">
            <properties include=".*"/>
        </filter>
        <groupTable id="opRecordParamTypesTable"
                    width="100%">
            <actions>
                <action id="create"/>
                <action id="edit"/>
                <action id="remove"/>
            </actions>
            <columns>
                <column id="vectorParamName"/>
            </columns>
            <rows datasource="opRecordParamTypesDs"/>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn"
                        action="opRecordParamTypesTable.create"/>
                <button id="editBtn"
                        action="opRecordParamTypesTable.edit"/>
                <button id="removeBtn"
                        action="opRecordParamTypesTable.remove"/>
            </buttonsPanel>
        </groupTable>
    </layout>
</window>
