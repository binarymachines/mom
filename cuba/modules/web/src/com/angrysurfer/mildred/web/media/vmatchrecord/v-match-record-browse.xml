<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://browseCaption"
        class="com.angrysurfer.mildred.web.media.vmatchrecord.VMatchRecordBrowse"
        focusComponent="vMatchRecordsTable"
        lookupComponent="vMatchRecordsTable"
        messagesPack="com.angrysurfer.mildred.web.media.vmatchrecord">
    <dsContext>
        <groupDatasource id="vMatchRecordsDs"
                         class="com.angrysurfer.mildred.entity.VMatchRecord"
                         view="_local">
            <query>
                <![CDATA[select e from mildred$VMatchRecord e]]>
            </query>
        </groupDatasource>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout expand="vMatchRecordsTable"
            spacing="true">
        <filter id="filter"
                applyTo="vMatchRecordsTable"
                datasource="vMatchRecordsDs">
            <properties include=".*"/>
        </filter>
        <groupTable id="vMatchRecordsTable"
                    width="100%">
            <actions>
                <action id="create"/>
                <action id="edit"/>
                <action id="remove"/>
            </actions>
            <columns>
                <column id="comparisonResult"/>
                <column id="isExtMatch"/>
                <column id="id.documentPath"/>
                <column id="id.matchPath"/>
            </columns>
            <rows datasource="vMatchRecordsDs"/>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn"
                        action="vMatchRecordsTable.create"/>
                <button id="editBtn"
                        action="vMatchRecordsTable.edit"/>
                <button id="removeBtn"
                        action="vMatchRecordsTable.remove"/>
            </buttonsPanel>
        </groupTable>
    </layout>
</window>
