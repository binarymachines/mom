<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://editorCaption"
        class="com.angrysurfer.mildred.web.media.valias.VAliasEdit"
        datasource="vAliasDs"
        focusComponent="fieldGroup"
        messagesPack="com.angrysurfer.mildred.web.media.valias">
    <dsContext>
        <datasource id="vAliasDs"
                    class="com.angrysurfer.mildred.entity.VAlias"
                    view="_local">
            <datasource id="idDs"
                        property="id"/>
        </datasource>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout expand="windowActions"
            spacing="true">
        <fieldGroup id="fieldGroup"
                    datasource="vAliasDs">
            <column width="250px">
                <field datasource="idDs"
                       property="documentFormat"/>
                <field datasource="idDs"
                       property="name"/>
                <field datasource="idDs"
                       property="attributeName"/>
            </column>
        </fieldGroup>
        <frame id="windowActions"
               screen="extendedEditWindowActions"/>
    </layout>
</window>
