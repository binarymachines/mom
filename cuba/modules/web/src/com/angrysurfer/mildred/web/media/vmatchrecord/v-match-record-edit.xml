<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://editorCaption"
        class="com.angrysurfer.mildred.web.media.vmatchrecord.VMatchRecordEdit"
        datasource="vMatchRecordDs"
        focusComponent="fieldGroup"
        messagesPack="com.angrysurfer.mildred.web.media.vmatchrecord">
    <dsContext>
        <datasource id="vMatchRecordDs"
                    class="com.angrysurfer.mildred.entity.VMatchRecord"
                    view="_local">
            <datasource id="idDs"
                        property="id"/>
        </datasource>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout expand="windowActions"
            spacing="true">
        <fieldGroup id="fieldGroup"
                    datasource="vMatchRecordDs">
            <column width="250px">
                <field property="comparisonResult"/>
                <field property="isExtMatch"/>
                <field datasource="idDs"
                       property="documentPath"/>
                <field datasource="idDs"
                       property="matchPath"/>
            </column>
        </fieldGroup>
        <frame id="windowActions"
               screen="extendedEditWindowActions"/>
    </layout>
</window>
