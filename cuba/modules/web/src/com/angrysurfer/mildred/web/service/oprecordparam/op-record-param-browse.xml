<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://browseCaption"
        class="com.angrysurfer.mildred.web.service.oprecordparam.OpRecordParamBrowse"
        focusComponent="opRecordParamsTable"
        lookupComponent="opRecordParamsTable"
        messagesPack="com.angrysurfer.mildred.web.service.oprecordparam">
    <dsContext>
        <groupDatasource id="opRecordParamsDs"
                         class="com.angrysurfer.mildred.entity.OpRecordParam"
                         view="OpRecordParam-screen-view">
            <query>
                <![CDATA[select e from mildred$OpRecordParam e]]>
            </query>
        </groupDatasource>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout expand="opRecordParamsTable"
            spacing="true">
        <filter id="filter"
                applyTo="opRecordParamsTable"
                datasource="opRecordParamsDs">
            <properties include=".*"/>
        </filter>
        <groupTable id="opRecordParamsTable"
                    width="100%">
            <actions>
                <action id="create"/>
                <action id="edit"/>
                <action id="remove"/>
            </actions>
            <columns>
                <column id="paramType"/>
                <column id="opRecord"/>
                <column id="name"/>
                <column id="value"/>
            </columns>
            <rows datasource="opRecordParamsDs"/>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn"
                        action="opRecordParamsTable.create"/>
                <button id="editBtn"
                        action="opRecordParamsTable.edit"/>
                <button id="removeBtn"
                        action="opRecordParamsTable.remove"/>
            </buttonsPanel>
        </groupTable>
    </layout>
</window>
