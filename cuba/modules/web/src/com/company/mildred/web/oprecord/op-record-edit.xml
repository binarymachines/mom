<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://editorCaption"
        class="com.company.mildred.web.oprecord.OpRecordEdit"
        datasource="opRecordDs"
        focusComponent="fieldGroup"
        messagesPack="com.company.mildred.web.oprecord">
    <dsContext>
        <datasource id="opRecordDs"
                    class="com.company.mildred.entity.OpRecord"
                    view="_local"/>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout expand="windowActions"
            spacing="true">
        <fieldGroup id="fieldGroup"
                    datasource="opRecordDs">
            <column width="250px">
                <field property="pid"/>
                <field property="operatorName"/>
                <field property="operationName"/>
                <field property="targetEsid"/>
                <field property="targetPath"/>
                <field property="status"/>
                <field property="startTime"/>
                <field property="endTime"/>
                <field property="effectiveDt"/>
                <field property="expirationDt"/>
            </column>
        </fieldGroup>
        <frame id="windowActions"
               screen="editWindowActions"/>
    </layout>
</window>
