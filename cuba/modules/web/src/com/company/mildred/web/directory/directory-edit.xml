<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://editorCaption"
        class="com.company.mildred.web.directory.DirectoryEdit"
        datasource="directoryDs"
        focusComponent="fieldGroup"
        messagesPack="com.company.mildred.web.directory">
    <dsContext>
        <datasource id="directoryDs"
                    class="com.company.mildred.entity.Directory"
                    view="Directory-screen-view"/>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout expand="windowActions"
            spacing="true">
        <fieldGroup id="fieldGroup"
                    datasource="directoryDs">
            <column width="250px">
                <field property="name"/>
                <field property="directoryType"/>
                <field property="effectiveDt"/>
                <field property="expirationDt"/>
                <field property="activeFlag"/>
            </column>
        </fieldGroup>
        <frame id="windowActions"
               screen="editWindowActions"/>
    </layout>
</window>
