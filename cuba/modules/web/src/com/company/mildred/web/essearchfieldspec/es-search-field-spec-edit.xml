<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://editorCaption"
        class="com.company.mildred.web.essearchfieldspec.EsSearchFieldSpecEdit"
        datasource="esSearchFieldSpecDs"
        focusComponent="fieldGroup"
        messagesPack="com.company.mildred.web.essearchfieldspec">
    <dsContext>
        <datasource id="esSearchFieldSpecDs"
                    class="com.company.mildred.entity.EsSearchFieldSpec"
                    view="_local"/>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout expand="windowActions"
            spacing="true">
        <fieldGroup id="fieldGroup"
                    datasource="esSearchFieldSpecDs">
            <column width="250px">
                <field property="fieldName"/>
                <field property="boost"/>
                <field property="bool"/>
                <field property="operator"/>
                <field property="minimumShouldMatch"/>
                <field property="analyzer"/>
                <field property="querySection"/>
                <field property="defaultValue"/>
            </column>
        </fieldGroup>
        <frame id="windowActions"
               screen="editWindowActions"/>
    </layout>
</window>
