<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://editorCaption"
        class="com.company.mildred.web.vmactionmreasons.VMActionMReasonsEdit"
        datasource="vMActionMReasonsDs"
        focusComponent="fieldGroup"
        messagesPack="com.company.mildred.web.vmactionmreasons">
    <dsContext>
        <datasource id="vMActionMReasonsDs"
                    class="com.company.mildred.entity.VMActionMReasons"
                    view="_local">
            <datasource id="idDs"
                        property="id"/>
        </datasource>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout expand="scrollBox"
            spacing="true">
        <scrollBox id="scrollBox"
                   spacing="true">
            <fieldGroup id="fieldGroup"
                        datasource="vMActionMReasonsDs">
                <column width="250px">
                    <field property="actionPriority"/>
                    <field property="actionDispatchName"/>
                    <field property="actionDispatchCategory"/>
                    <field property="actionDispatchModule"/>
                    <field property="actionDispatchClass"/>
                    <field property="actionDispatchFunc"/>
                    <field property="reasonWeight"/>
                    <field property="conditionalDispatchName"/>
                    <field property="conditionalDispatchCategory"/>
                    <field property="conditionalDispatchModule"/>
                    <field property="conditionalDispatchClass"/>
                    <field property="conditionalDispatchFunc"/>
                    <field datasource="idDs"
                           property="metaAction"/>
                    <field datasource="idDs"
                           property="reason"/>
                </column>
            </fieldGroup>
        </scrollBox>
        <frame id="windowActions"
               screen="editWindowActions"/>
    </layout>
</window>
