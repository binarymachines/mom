<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://browseCaption"
        class="com.company.mildred.web.vmactionmreasons.VMActionMReasonsBrowse"
        focusComponent="vMActionMReasonsesTable"
        lookupComponent="vMActionMReasonsesTable"
        messagesPack="com.company.mildred.web.vmactionmreasons">
    <dsContext>
        <groupDatasource id="vMActionMReasonsesDs"
                         class="com.company.mildred.entity.VMActionMReasons"
                         view="_local">
            <query>
                <![CDATA[select e from mildred$VMActionMReasons e]]>
            </query>
        </groupDatasource>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout expand="vMActionMReasonsesTable"
            spacing="true">
        <filter id="filter"
                applyTo="vMActionMReasonsesTable"
                datasource="vMActionMReasonsesDs">
            <properties include=".*"/>
        </filter>
        <groupTable id="vMActionMReasonsesTable"
                    width="100%">
            <actions>
                <action id="create"/>
                <action id="edit"/>
                <action id="remove"/>
            </actions>
            <columns>
                <column id="actionPriority"/>
                <column id="actionDispatchName"/>
                <column id="actionDispatchCategory"/>
                <column id="actionDispatchModule"/>
                <column id="actionDispatchClass"/>
                <column id="actionDispatchFunc"/>
                <column id="reasonWeight"/>
                <column id="conditionalDispatchName"/>
                <column id="conditionalDispatchCategory"/>
                <column id="conditionalDispatchModule"/>
                <column id="conditionalDispatchClass"/>
                <column id="conditionalDispatchFunc"/>
                <column id="id.metaAction"/>
                <column id="id.reason"/>
            </columns>
            <rows datasource="vMActionMReasonsesDs"/>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn"
                        action="vMActionMReasonsesTable.create"/>
                <button id="editBtn"
                        action="vMActionMReasonsesTable.edit"/>
                <button id="removeBtn"
                        action="vMActionMReasonsesTable.remove"/>
            </buttonsPanel>
        </groupTable>
    </layout>
</window>
