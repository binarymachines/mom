<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://editorCaption"
        class="com.company.mildred.web.action.ActionEdit"
        datasource="actionDs"
        focusComponent="fieldGroup"
        messagesPack="com.company.mildred.web.action">
    <dsContext>
        <datasource id="actionDs"
                    class="com.company.mildred.entity.Action"
                    view="Action-screen-view"/>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout expand="windowActions"
            spacing="true">
        <fieldGroup id="fieldGroup"
                    datasource="actionDs">
            <column width="250px">
                <field property="metaAction"/>
                <field property="actionStatus"/>
                <field property="parentAction"/>
            </column>
        </fieldGroup>
        <frame id="windowActions"
               screen="editWindowActions"/>
    </layout>
</window>
