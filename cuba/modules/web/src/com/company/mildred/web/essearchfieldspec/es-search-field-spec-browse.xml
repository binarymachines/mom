<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://browseCaption"
        class="com.company.mildred.web.essearchfieldspec.EsSearchFieldSpecBrowse"
        focusComponent="esSearchFieldSpecsTable"
        lookupComponent="esSearchFieldSpecsTable"
        messagesPack="com.company.mildred.web.essearchfieldspec">
    <dsContext>
        <groupDatasource id="esSearchFieldSpecsDs"
                         class="com.company.mildred.entity.EsSearchFieldSpec"
                         view="_local">
            <query>
                <![CDATA[select e from mildred$EsSearchFieldSpec e]]>
            </query>
        </groupDatasource>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout expand="esSearchFieldSpecsTable"
            spacing="true">
        <filter id="filter"
                applyTo="esSearchFieldSpecsTable"
                datasource="esSearchFieldSpecsDs">
            <properties include=".*"/>
        </filter>
        <groupTable id="esSearchFieldSpecsTable"
                    width="100%">
            <actions>
                <action id="create"/>
                <action id="edit"/>
                <action id="remove"/>
            </actions>
            <columns>
                <column id="fieldName"/>
                <column id="boost"/>
                <column id="bool"/>
                <column id="operator"/>
                <column id="minimumShouldMatch"/>
                <column id="analyzer"/>
                <column id="querySection"/>
                <column id="defaultValue"/>
            </columns>
            <rows datasource="esSearchFieldSpecsDs"/>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn"
                        action="esSearchFieldSpecsTable.create"/>
                <button id="editBtn"
                        action="esSearchFieldSpecsTable.edit"/>
                <button id="removeBtn"
                        action="esSearchFieldSpecsTable.remove"/>
            </buttonsPanel>
        </groupTable>
    </layout>
</window>
