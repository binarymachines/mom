<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://editorCaption"
        class="com.company.mildred.web.vmodestate.VModeStateEdit"
        datasource="vModeStateDs"
        focusComponent="fieldGroup"
        messagesPack="com.company.mildred.web.vmodestate">
    <dsContext>
        <datasource id="vModeStateDs"
                    class="com.company.mildred.entity.VModeState"
                    view="_local">
            <datasource id="idDs"
                        property="id"/>
        </datasource>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout expand="windowActions"
            spacing="true">
        <fieldGroup id="fieldGroup"
                    datasource="vModeStateDs">
            <column width="250px">
                <field property="status"/>
                <field property="timesActivated"/>
                <field property="timesCompleted"/>
                <field property="lastActivated"/>
                <field property="lastCompleted"/>
                <field property="errorCount"/>
                <field property="cumErrorCount"/>
                <field property="expirationDt"/>
                <field datasource="idDs"
                       property="modeName"/>
                <field datasource="idDs"
                       property="stateName"/>
                <field datasource="idDs"
                       property="pid"/>
                <field datasource="idDs"
                       property="effectiveDt"/>
            </column>
        </fieldGroup>
        <frame id="windowActions"
               screen="editWindowActions"/>
    </layout>
</window>
