<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://browseCaption"
        class="com.company.mildred.web.oprecord.OpRecordBrowse"
        focusComponent="opRecordsTable"
        lookupComponent="opRecordsTable"
        messagesPack="com.company.mildred.web.oprecord">
    <dsContext>
        <groupDatasource id="opRecordsDs"
                         class="com.company.mildred.entity.OpRecord"
                         view="_local">
            <query>
                <![CDATA[select e from mildred$OpRecord e]]>
            </query>
        </groupDatasource>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout expand="opRecordsTable"
            spacing="true">
        <filter id="filter"
                applyTo="opRecordsTable"
                datasource="opRecordsDs">
            <properties include=".*"/>
        </filter>
        <groupTable id="opRecordsTable"
                    width="100%">
            <actions>
                <action id="create"/>
                <action id="edit"/>
                <action id="remove"/>
            </actions>
            <columns>
                <column id="pid"
                        caption="msg://pid"/>
                <column id="operatorName"
                        caption="msg://operatorName"/>
                <column id="operationName"
                        caption="msg://operationName"/>
                <column id="targetEsid"
                        caption="msg://targetEsid"/>
                <column id="targetPath"
                        caption="msg://targetPath"/>
                <column id="status"
                        caption="msg://status"/>
                <column id="startTime"
                        caption="msg://startTime"/>
                <column id="endTime"
                        caption="msg://endTime"/>
                <column id="effectiveDt"
                        caption="msg://effectiveDt"/>
                <column id="expirationDt"
                        caption="msg://expirationDt"/>
            </columns>
            <rows datasource="opRecordsDs"/>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn"
                        action="opRecordsTable.create"/>
                <button id="editBtn"
                        action="opRecordsTable.edit"/>
                <button id="removeBtn"
                        action="opRecordsTable.remove"/>
            </buttonsPanel>
        </groupTable>
    </layout>
</window>
