<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://browseCaption"
        class="com.company.mildred.web.metareason.MetaReasonBrowse"
        focusComponent="metaReasonsTable"
        lookupComponent="metaReasonsTable"
        messagesPack="com.company.mildred.web.metareason">
    <dsContext>
        <groupDatasource id="metaReasonsDs"
                         class="com.company.mildred.entity.MetaReason"
                         view="metaReason-metaAction-view">
            <query>
                <![CDATA[select e from mildred$MetaReason e]]>
            </query>
        </groupDatasource>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout expand="metaReasonsTable"
            spacing="true">
        <filter id="filter"
                applyTo="metaReasonsTable"
                datasource="metaReasonsDs">
            <properties include=".*"/>
        </filter>
        <groupTable id="metaReasonsTable"
                    width="100%">
            <actions>
                <action id="create"/>
                <action id="edit"/>
                <action id="remove"/>
            </actions>
            <columns>
                <column id="name"/>
                <column id="parentMetaReason"/>
                <column id="documentType"/>
                <column id="weight"/>
                <column id="dispatch"/>
                <column id="expectedResult"/>
                <column id="esSearchSpec"/>
            </columns>
            <rows datasource="metaReasonsDs"/>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn"
                        action="metaReasonsTable.create"/>
                <button id="editBtn"
                        action="metaReasonsTable.edit"/>
                <button id="removeBtn"
                        action="metaReasonsTable.remove"/>
            </buttonsPanel>
        </groupTable>
    </layout>
</window>
