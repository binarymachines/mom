<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://editorCaption"
        class="com.company.mildred.web.oprecord.OpRecordEdit"
        datasource="opRecordDs"
        focusComponent="fieldGroup"
        messagesPack="com.company.mildred.web.oprecord">
    <dsContext>
        <datasource id="opRecordDs"
                    class="com.company.mildred.entity.OpRecord"
                    view="_local"/>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout expand="windowActions"
            spacing="true">
        <fieldGroup id="fieldGroup"
                    datasource="opRecordDs">
            <column width="250px">
                <field caption="msg://pid"
                       property="pid"/>
                <field caption="msg://operatorName"
                       property="operatorName"/>
                <field caption="msg://operationName"
                       property="operationName"/>
                <field caption="msg://targetEsid"
                       property="targetEsid"/>
                <field caption="msg://targetPath"
                       property="targetPath"/>
                <field caption="msg://status"
                       property="status"/>
                <field caption="msg://startTime"
                       property="startTime"/>
                <field caption="msg://endTime"
                       property="endTime"/>
                <field caption="msg://effectiveDt"
                       property="effectiveDt"/>
                <field caption="msg://expirationDt"
                       property="expirationDt"/>
            </column>
        </fieldGroup>
        <frame id="windowActions"
               screen="editWindowActions"/>
    </layout>
</window>
