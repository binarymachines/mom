<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://browseCaption"
        class="com.company.mildred.web.directorytype.DirectoryTypeBrowse"
        focusComponent="directoryTypesTable"
        lookupComponent="directoryTypesTable"
        messagesPack="com.company.mildred.web.directorytype">
    <dsContext>
        <groupDatasource id="directoryTypesDs"
                         class="com.company.mildred.entity.DirectoryType"
                         view="_local">
            <query>
                <![CDATA[select e from mildred$DirectoryType e]]>
            </query>
        </groupDatasource>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout expand="directoryTypesTable"
            spacing="true">
        <filter id="filter"
                applyTo="directoryTypesTable"
                datasource="directoryTypesDs">
            <properties include=".*"/>
        </filter>
        <groupTable id="directoryTypesTable"
                    width="100%">
            <actions>
                <action id="create"/>
                <action id="edit"/>
                <action id="remove"/>
            </actions>
            <columns>
                <column id="desc"/>
                <column id="name"/>
            </columns>
            <rows datasource="directoryTypesDs"/>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn"
                        action="directoryTypesTable.create"/>
                <button id="editBtn"
                        action="directoryTypesTable.edit"/>
                <button id="removeBtn"
                        action="directoryTypesTable.remove"/>
            </buttonsPanel>
        </groupTable>
    </layout>
</window>
