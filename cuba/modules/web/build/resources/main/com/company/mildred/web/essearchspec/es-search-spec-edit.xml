<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://editorCaption"
        class="com.company.mildred.web.essearchspec.EsSearchSpecEdit"
        datasource="esSearchSpecDs"
        focusComponent="fieldGroup"
        messagesPack="com.company.mildred.web.essearchspec">
    <dsContext>
        <datasource id="esSearchSpecDs"
                    class="com.company.mildred.entity.EsSearchSpec"
                    view="_local"/>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout expand="windowActions"
            spacing="true">
        <fieldGroup id="fieldGroup"
                    datasource="esSearchSpecDs">
            <column width="250px">
                <field property="name"/>
                <field property="queryType"/>
                <field property="maxScorePercentage"/>
                <field property="appliesToFileType"/>
                <field property="activeFlag"/>
            </column>
        </fieldGroup>
        <frame id="windowActions"
               screen="editWindowActions"/>
    </layout>
</window>
