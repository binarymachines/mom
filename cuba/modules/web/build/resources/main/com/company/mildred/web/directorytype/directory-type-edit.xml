<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://editorCaption"
        class="com.company.mildred.web.directorytype.DirectoryTypeEdit"
        datasource="directoryTypeDs"
        focusComponent="fieldGroup"
        messagesPack="com.company.mildred.web.directorytype">
    <dsContext>
        <datasource id="directoryTypeDs"
                    class="com.company.mildred.entity.DirectoryType"
                    view="_local"/>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout expand="windowActions"
            spacing="true">
        <fieldGroup id="fieldGroup"
                    datasource="directoryTypeDs">
            <column width="250px">
                <field property="desc"/>
                <field property="name"/>
            </column>
        </fieldGroup>
        <frame id="windowActions"
               screen="editWindowActions"/>
    </layout>
</window>
