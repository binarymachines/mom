<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://browseCaption"
        class="com.company.mildred.web.delimitedfileinfo.DelimitedFileInfoBrowse"
        focusComponent="delimitedFileInfoesTable"
        lookupComponent="delimitedFileInfoesTable"
        messagesPack="com.company.mildred.web.delimitedfileinfo">
    <dsContext>
        <groupDatasource id="delimitedFileInfoesDs"
                         class="com.company.mildred.entity.DelimitedFileInfo"
                         view="_local">
            <query>
                <![CDATA[select e from mildred$DelimitedFileInfo e]]>
            </query>
        </groupDatasource>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout expand="delimitedFileInfoesTable"
            spacing="true">
        <filter id="filter"
                applyTo="delimitedFileInfoesTable"
                datasource="delimitedFileInfoesDs">
            <properties include=".*"/>
        </filter>
        <groupTable id="delimitedFileInfoesTable"
                    width="100%">
            <actions>
                <action id="create"/>
                <action id="edit"/>
                <action id="remove"/>
            </actions>
            <columns>
                <column id="document"/>
                <column id="delimiter"/>
                <column id="columnCount"/>
            </columns>
            <rows datasource="delimitedFileInfoesDs"/>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn"
                        action="delimitedFileInfoesTable.create"/>
                <button id="editBtn"
                        action="delimitedFileInfoesTable.edit"/>
                <button id="removeBtn"
                        action="delimitedFileInfoesTable.remove"/>
            </buttonsPanel>
        </groupTable>
    </layout>
</window>
