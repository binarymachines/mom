<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://browseCaption"
        class="com.company.mildred.web.matchrecord.MatchRecordBrowse"
        focusComponent="matchRecordsTable"
        lookupComponent="matchRecordsTable"
        messagesPack="com.company.mildred.web.matchrecord">
    <dsContext>
        <groupDatasource id="matchRecordsDs"
                         class="com.company.mildred.entity.MatchRecord"
                         view="_local">
            <query>
                <![CDATA[select e from mildred$MatchRecord e]]>
            </query>
        </groupDatasource>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout expand="matchRecordsTable"
            spacing="true">
        <filter id="filter"
                applyTo="matchRecordsTable"
                datasource="matchRecordsDs">
            <properties include=".*"/>
        </filter>
        <groupTable id="matchRecordsTable"
                    width="100%">
            <actions>
                <action id="create"/>
                <action id="edit"/>
                <action id="remove"/>
            </actions>
            <columns>
                <column id="matcherName"/>
                <column id="isExtMatch"/>
                <column id="score"/>
                <column id="maxScore"/>
                <column id="minScore"/>
                <column id="comparisonResult"/>
                <column id="fileParent"/>
                <column id="fileName"/>
                <column id="matchParent"/>
                <column id="matchFileName"/>
                <column id="id.doc"/>
                <column id="id.matchDoc"/>
            </columns>
            <rows datasource="matchRecordsDs"/>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn"
                        action="matchRecordsTable.create"/>
                <button id="editBtn"
                        action="matchRecordsTable.edit"/>
                <button id="removeBtn"
                        action="matchRecordsTable.remove"/>
            </buttonsPanel>
        </groupTable>
    </layout>
</window>
