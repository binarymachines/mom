<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://browseCaption"
        class="com.company.mildred.web.reason.ReasonBrowse"
        focusComponent="reasonsTable"
        lookupComponent="reasonsTable"
        messagesPack="com.company.mildred.web.reason">
    <dsContext>
        <groupDatasource id="reasonsDs"
                         class="com.company.mildred.entity.Reason"
                         view="Reason-screen-view">
            <query>
                <![CDATA[select e from mildred$Reason e]]>
            </query>
        </groupDatasource>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout expand="reasonsTable"
            spacing="true">
        <filter id="filter"
                applyTo="reasonsTable"
                datasource="reasonsDs">
            <properties include=".*"/>
        </filter>
        <groupTable id="reasonsTable"
                    width="100%">
            <actions>
                <action id="create"/>
                <action id="edit"/>
                <action id="remove"/>
            </actions>
            <columns>
                <column id="name"/>
                <column id="parentReason"/>
                <column id="documentType"/>
                <column id="weight"/>
                <column id="dispatch"/>
                <column id="expectedResult"/>
            </columns>
            <rows datasource="reasonsDs"/>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn"
                        action="reasonsTable.create"/>
                <button id="editBtn"
                        action="reasonsTable.edit"/>
                <button id="removeBtn"
                        action="reasonsTable.remove"/>
            </buttonsPanel>
        </groupTable>
    </layout>
</window>
