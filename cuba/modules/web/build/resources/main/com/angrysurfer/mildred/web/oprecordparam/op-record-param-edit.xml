<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://editorCaption"
        class="com.angrysurfer.mildred.web.oprecordparam.OpRecordParamEdit"
        datasource="opRecordParamDs"
        focusComponent="fieldGroup"
        messagesPack="com.angrysurfer.mildred.web.oprecordparam">
    <dsContext>
        <datasource id="opRecordParamDs"
                    class="com.angrysurfer.mildred.entity.OpRecordParam"
                    view="OpRecordParam-screen-view"/>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout expand="windowActions"
            spacing="true">
        <fieldGroup id="fieldGroup"
                    datasource="opRecordParamDs">
            <column width="250px">
                <field property="paramType"/>
                <field property="opRecord"/>
                <field property="name"/>
                <field property="value"/>
            </column>
        </fieldGroup>
        <frame id="windowActions"
               screen="editWindowActions"/>
    </layout>
</window>
