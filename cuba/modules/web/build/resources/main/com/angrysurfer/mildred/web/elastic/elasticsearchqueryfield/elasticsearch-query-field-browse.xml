<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://browseCaption"
        class="com.angrysurfer.mildred.web.elastic.elasticsearchqueryfield.ElasticsearchQueryFieldBrowse"
        focusComponent="elasticsearchQueryFieldsTable"
        lookupComponent="elasticsearchQueryFieldsTable"
        messagesPack="com.angrysurfer.mildred.web.elastic.elasticsearchqueryfield">
    <dsContext>
        <groupDatasource id="elasticsearchQueryFieldsDs"
                         class="com.angrysurfer.mildred.entity.ElasticsearchQueryField"
                         view="_local">
            <query>
                <![CDATA[select e from mildred$DocQueryField e]]>
            </query>
        </groupDatasource>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout expand="elasticsearchQueryFieldsTable"
            spacing="true">
        <filter id="filter"
                applyTo="elasticsearchQueryFieldsTable"
                datasource="elasticsearchQueryFieldsDs">
            <properties include=".*"/>
        </filter>
        <groupTable id="elasticsearchQueryFieldsTable"
                    width="100%">
            <actions>
                <action id="create"/>
                <action id="edit"/>
                <action id="remove"/>
            </actions>
            <columns>
                <column id="fieldName"/>
                <column id="boost"/>
                <column id="bool"/>
                <column id="operator"/>
                <column id="minimumShouldMatch"/>
                <column id="analyzer"/>
                <column id="querySection"/>
                <column id="defaultValue"/>
            </columns>
            <rows datasource="elasticsearchQueryFieldsDs"/>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn"
                        action="elasticsearchQueryFieldsTable.create"/>
                <button id="editBtn"
                        action="elasticsearchQueryFieldsTable.edit"/>
                <button id="removeBtn"
                        action="elasticsearchQueryFieldsTable.remove"/>
            </buttonsPanel>
        </groupTable>
    </layout>
</window>
