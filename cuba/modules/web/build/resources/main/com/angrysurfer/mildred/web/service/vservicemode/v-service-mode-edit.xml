<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://editorCaption"
        class="com.angrysurfer.mildred.web.service.vservicemode.VServiceModeEdit"
        datasource="vServiceModeDs"
        focusComponent="fieldGroup"
        messagesPack="com.angrysurfer.mildred.web.service.vservicemode">
    <dsContext>
        <datasource id="vServiceModeDs"
                    class="com.angrysurfer.mildred.entity.service.VServiceMode"
                    view="_local">
            <datasource id="idDs"
                        property="id"/>
        </datasource>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout expand="windowActions"
            spacing="true">
        <fieldGroup id="fieldGroup"
                    datasource="vServiceModeDs">
            <column width="250px">
                <field property="serviceProfile"/>
                <field property="mode"/>
                <field datasource="idDs"
                       property="pkSp"/>
                <field datasource="idDs"
                       property="pkMode"/>
            </column>
        </fieldGroup>
        <frame id="windowActions"
               screen="editWindowActions"/>
    </layout>
</window>
