<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://browseCaption"
        class="com.angrysurfer.mildred.web.suggestion.generatedreasonparam.GeneratedReasonParamBrowse"
        focusComponent="generatedReasonParamsTable"
        lookupComponent="generatedReasonParamsTable"
        messagesPack="com.angrysurfer.mildred.web.suggestion.generatedreasonparam">
    <dsContext>
        <groupDatasource id="generatedReasonParamsDs"
                         class="com.angrysurfer.mildred.entity.suggestion.GeneratedReasonParam"
                         view="GeneratedReasonParam-screen-view">
            <query>
                <![CDATA[select e from mildred$GeneratedReasonParam e]]>
            </query>
        </groupDatasource>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout expand="generatedReasonParamsTable"
            spacing="true">
        <filter id="filter"
                applyTo="generatedReasonParamsTable"
                datasource="generatedReasonParamsDs">
            <properties include=".*"/>
        </filter>
        <groupTable id="generatedReasonParamsTable"
                    width="100%">
            <actions>
                <action id="create"/>
                <action id="edit"/>
                <action id="remove"/>
            </actions>
            <columns>
                <column id="reason"/>
                <column id="value"/>
            </columns>
            <rows datasource="generatedReasonParamsDs"/>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn"
                        action="generatedReasonParamsTable.create"/>
                <button id="editBtn"
                        action="generatedReasonParamsTable.edit"/>
                <button id="removeBtn"
                        action="generatedReasonParamsTable.remove"/>
            </buttonsPanel>
        </groupTable>
    </layout>
</window>
