<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://editorCaption"
        class="com.angrysurfer.mildred.web.service.serviceprofile.ServiceProfileEdit"
        datasource="serviceProfileDs"
        focusComponent="fieldGroup"
        messagesPack="com.angrysurfer.mildred.web.service.serviceprofile">
    <dsContext>
        <datasource id="serviceProfileDs"
                    class="com.angrysurfer.mildred.entity.service.ServiceProfile"
                    view="ServiceProfile-screen-view">
            <collectionDatasource id="switchRuleDs"
                                  property="switchRule"/>
        </datasource>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout expand="windowActions"
            spacing="true">
        <fieldGroup id="fieldGroup"
                    datasource="serviceProfileDs">
            <column width="250px">
                <field property="startupServiceDispatch"/>
                <field property="name"/>
            </column>
        </fieldGroup>
        <groupBox id="switchRuleBox"
                  caption="msg://com.angrysurfer.mildred.entity.service/ServiceProfile.switchRule">
            <table id="switchRuleTable"
                   height="200px"
                   width="100%">
                <actions>
                    <action id="add"/>
                    <action id="remove"/>
                </actions>
                <columns>
                    <column id="name"/>
                </columns>
                <rows datasource="switchRuleDs"/>
                <buttonsPanel>
                    <button action="switchRuleTable.add"/>
                    <button action="switchRuleTable.remove"/>
                </buttonsPanel>
            </table>
        </groupBox>
        <frame id="windowActions"
               screen="editWindowActions"/>
    </layout>
</window>
