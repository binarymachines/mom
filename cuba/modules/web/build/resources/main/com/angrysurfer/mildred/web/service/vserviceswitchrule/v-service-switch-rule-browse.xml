<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://browseCaption"
        class="com.angrysurfer.mildred.web.service.vserviceswitchrule.VServiceSwitchRuleBrowse"
        focusComponent="vServiceSwitchRulesTable"
        lookupComponent="vServiceSwitchRulesTable"
        messagesPack="com.angrysurfer.mildred.web.service.vserviceswitchrule">
    <dsContext>
        <groupDatasource id="vServiceSwitchRulesDs"
                         class="com.angrysurfer.mildred.entity.service.VServiceSwitchRule"
                         view="vServiceSwitchRule-view">
            <query>
                <![CDATA[select e from mildred$VServiceSwitchRule e]]>
            </query>
        </groupDatasource>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout expand="vServiceSwitchRulesTable"
            spacing="true">
        <filter id="filter"
                applyTo="vServiceSwitchRulesTable"
                datasource="vServiceSwitchRulesDs">
            <properties include=".*"/>
        </filter>
        <groupTable id="vServiceSwitchRulesTable"
                    width="100%">
            <actions>
                <action id="create"/>
                <action id="edit"/>
                <action id="remove"/>
            </actions>
            <columns>
                <column id="serviceProfile"/>
                <column id="startupDispatch"/>
                <column id="mode"/>
                <column id="switchRule"/>
                <column id="beforeDispatch"/>
                <column id="afterDispatch"/>
                <column id="beginMode"/>
                <column id="endMode"/>
                <column id="conditionDispatch"/>
                <column id="id.pkSp"/>
                <column id="id.pkSd"/>
                <column id="id.pkMode"/>
            </columns>
            <rows datasource="vServiceSwitchRulesDs"/>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn"
                        action="vServiceSwitchRulesTable.create"/>
                <button id="editBtn"
                        action="vServiceSwitchRulesTable.edit"/>
                <button id="removeBtn"
                        action="vServiceSwitchRulesTable.remove"/>
            </buttonsPanel>
        </groupTable>
    </layout>
</window>
