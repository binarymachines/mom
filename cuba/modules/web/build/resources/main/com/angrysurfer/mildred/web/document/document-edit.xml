<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://editorCaption"
        class="com.angrysurfer.mildred.web.document.DocumentEdit"
        datasource="documentDs"
        focusComponent="fieldGroup"
        messagesPack="com.angrysurfer.mildred.web.document">
    <dsContext>
        <datasource id="documentDs"
                    class="com.angrysurfer.mildred.entity.Document"
                    view="Document-screen-view"/>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout expand="windowActions"
            spacing="true">
        <fieldGroup id="fieldGroup"
                    datasource="documentDs">
            <column width="250px">
                <field property="fileType"/>
                <field property="documentType"/>
                <field property="absolutePath"/>
                <field property="effectiveDt"/>
                <field property="expirationDt"/>
                <field property="id_"/>
            </column>
        </fieldGroup>
        <frame id="windowActions"
               screen="editWindowActions"/>
    </layout>
</window>
