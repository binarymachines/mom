<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://caption"
        class="com.angrysurfer.mildred.web.modedefault.ModeDefaultBrowse"
        focusComponent="table"
        lookupComponent="table"
        messagesPack="com.angrysurfer.mildred.web.modedefault">
    <dsContext>
        <datasource id="modeDefaultDs"
                    class="com.angrysurfer.mildred.entity.service.ModeDefault"
                    view="ModeDefault-screen-view"/>
        <groupDatasource id="modeDefaultsDs"
                         class="com.angrysurfer.mildred.entity.service.ModeDefault"
                         view="ModeDefault-screen-view">
            <query>
                <![CDATA[select e from mildred$ModeDefault e]]>
            </query>
        </groupDatasource>
        <collectionDatasource id="modesDs"
                              class="com.angrysurfer.mildred.entity.service.Mode"
                              view="_minimal">
            <query>
                <![CDATA[select e from mildred$Mode e]]>
            </query>
        </collectionDatasource>
        <collectionDatasource id="effectDispatchesDs"
                              class="com.angrysurfer.mildred.entity.service.ServiceDispatch"
                              view="_minimal">
            <query>
                <![CDATA[select e from mildred$ServiceDispatch e]]>
            </query>
        </collectionDatasource>
    </dsContext>
    <actions>
        <action id="save"
                caption="mainMsg://actions.Ok"
                icon="icons/ok.png"
                invoke="save"
                shortcut="CTRL-ENTER"/>
        <action id="cancel"
                caption="mainMsg://actions.Cancel"
                description="Esc"
                icon="icons/cancel.png"
                invoke="cancel"/>
    </actions>
    <dialogMode height="600"
                width="800"/>
    <layout>
        <split id="split"
               height="100%"
               orientation="horizontal"
               reversePosition="true"
               width="100%">
            <vbox id="lookupBox"
                  expand="table"
                  height="100%"
                  margin="false,true,false,false"
                  spacing="true">
                <filter id="filter"
                        applyTo="table"
                        datasource="modeDefaultsDs">
                    <properties include=".*"/>
                </filter>
                <groupTable id="table"
                            width="100%">
                    <actions>
                        <action id="create"/>
                        <action id="edit"/>
                        <action id="remove"/>
                    </actions>
                    <columns>
                        <column id="mode"/>
                        <column id="priority"/>
                        <column id="effectDispatch"/>
                        <column id="timesToComplete"/>
                        <column id="decPriorityAmount"/>
                        <column id="incPriorityAmount"/>
                        <column id="errorTolerance"/>
                    </columns>
                    <rows datasource="modeDefaultsDs"/>
                    <rowsCount/>
                    <buttonsPanel id="buttonsPanel"
                                  alwaysVisible="true">
                        <button id="createBtn"
                                action="table.create"/>
                        <button id="editBtn"
                                action="table.edit"/>
                        <button id="removeBtn"
                                action="table.remove"/>
                    </buttonsPanel>
                </groupTable>
            </vbox>
            <vbox id="editBox"
                  expand="fieldGroupBox"
                  height="100%"
                  margin="false,false,false,true"
                  spacing="true">
                <vbox id="fieldGroupBox">
                    <fieldGroup id="fieldGroup"
                                datasource="modeDefaultDs">
                        <column width="250px">
                            <field optionsDatasource="modesDs"
                                   property="mode"/>
                            <field property="priority"/>
                            <field optionsDatasource="effectDispatchesDs"
                                   property="effectDispatch"/>
                            <field property="timesToComplete"/>
                            <field property="decPriorityAmount"/>
                            <field property="incPriorityAmount"/>
                            <field property="errorTolerance"/>
                        </column>
                    </fieldGroup>
                </vbox>
                <hbox id="actionsPane"
                      spacing="true"
                      visible="false">
                    <button id="saveBtn"
                            action="save"/>
                    <button id="cancelBtn"
                            action="cancel"/>
                </hbox>
            </vbox>
        </split>
    </layout>
</window>
