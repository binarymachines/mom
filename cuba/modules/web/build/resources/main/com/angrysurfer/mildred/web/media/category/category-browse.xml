<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://browseCaption"
        class="com.angrysurfer.mildred.web.media.Category.CategoryBrowse"
        focusComponent="categoriesTable"
        lookupComponent="categoriesTable"
        messagesPack="com.angrysurfer.mildred.web.media.Category">
    <dsContext>
        <groupDatasource id="categoriesDs"
                         class="com.angrysurfer.mildred.entity.media.Category"
                         view="_local">
            <query>
                <![CDATA[select e from mildred$Category e]]>
            </query>
        </groupDatasource>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout expand="categoriesTable"
            spacing="true">
        <filter id="filter"
                applyTo="categoriesTable"
                datasource="categoriesDs">
            <properties include=".*"/>
        </filter>
        <groupTable id="categoriesTable"
                    width="100%">
            <actions>
                <action id="create"/>
                <action id="edit"/>
                <action id="remove"/>
            </actions>
            <columns>
                <column id="name"/>
                <column id="assetType"/>
            </columns>
            <rows datasource="categoriesDs"/>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn"
                        action="categoriesTable.create"/>
                <button id="editBtn"
                        action="categoriesTable.edit"/>
                <button id="removeBtn"
                        action="categoriesTable.remove"/>
            </buttonsPanel>
        </groupTable>
    </layout>
</window>
