<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://browseCaption"
        class="com.angrysurfer.mildred.web.media.directorypattern.DirectoryPatternBrowse"
        focusComponent="directoryPatternsTable"
        lookupComponent="directoryPatternsTable"
        messagesPack="com.angrysurfer.mildred.web.media.directorypattern">
    <dsContext>
        <groupDatasource id="directoryPatternsDs"
                         class="com.angrysurfer.mildred.entity.media.DirectoryPattern"
                         view="directoryPattern-view">
            <query>
                <![CDATA[select e from mildred$DirectoryPattern e]]>
            </query>
        </groupDatasource>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout expand="directoryPatternsTable"
            spacing="true">
        <filter id="filter"
                applyTo="directoryPatternsTable"
                datasource="directoryPatternsDs">
            <properties include=".*"/>
        </filter>
        <groupTable id="directoryPatternsTable"
                    width="100%">
            <actions>
                <action id="create"
                        openType="DIALOG"/>
                <action id="edit"
                        openType="DIALOG"/>
                <action id="remove"/>
            </actions>
            <columns>
                <column id="pattern"/>
                <column id="directoryType"/>
            </columns>
            <rows datasource="directoryPatternsDs"/>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn"
                        action="directoryPatternsTable.create"/>
                <button id="editBtn"
                        action="directoryPatternsTable.edit"/>
                <button id="removeBtn"
                        action="directoryPatternsTable.remove"/>
            </buttonsPanel>
        </groupTable>
    </layout>
</window>
