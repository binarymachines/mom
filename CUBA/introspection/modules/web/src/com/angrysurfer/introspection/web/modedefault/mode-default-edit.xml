<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://editorCaption"
        class="com.angrysurfer.introspection.web.modedefault.ModeDefaultEdit"
        datasource="modeDefaultDs"
        focusComponent="fieldGroup"
        messagesPack="com.angrysurfer.introspection.web.modedefault">
    <dsContext>
        <datasource id="modeDefaultDs"
                    class="com.angrysurfer.introspection.entity.ModeDefault"
                    view="ModeDefault-screen-view"/>
        <collectionDatasource id="effectDispatchesDs"
                              class="com.angrysurfer.introspection.entity.Dispatch"
                              view="_minimal">
            <query>
                <![CDATA[select e from introspection$Dispatch e]]>
            </query>
        </collectionDatasource>
        <collectionDatasource id="modesDs"
                              class="com.angrysurfer.introspection.entity.Mode"
                              view="_minimal">
            <query>
                <![CDATA[select e from introspection$Mode e]]>
            </query>
        </collectionDatasource>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout expand="windowActions"
            spacing="true">
        <fieldGroup id="fieldGroup"
                    datasource="modeDefaultDs">
            <column width="250px">
                <field id="mode"
                       optionsDatasource="modesDs"/>
                <field id="effectDispatch"
                       optionsDatasource="effectDispatchesDs"/>
                <field id="priority"/>
                <field id="incPriorityAmount"/>
                <field id="decPriorityAmount"/>
                <field id="timesToComplete"/>
                <field id="errorTolerance"/>
            </column>
        </fieldGroup>
        <frame id="windowActions"
               screen="editWindowActions"/>
    </layout>
</window>
