<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://caption"
        class="com.angrysurfer.introspection.web.transitionrule.TransitionRuleBrowse"
        focusComponent="transitionRulesTable"
        lookupComponent="transitionRulesTable"
        messagesPack="com.angrysurfer.introspection.web.transitionrule">
    <dsContext>
        <datasource id="transitionRuleDs"
                    class="com.angrysurfer.introspection.entity.TransitionRule"
                    view="TransitionRule-screen-view"/>
        <groupDatasource id="transitionRulesDs"
                         class="com.angrysurfer.introspection.entity.TransitionRule"
                         view="TransitionRule-screen-view">
            <query>
                <![CDATA[select e from introspection$TransitionRule e]]>
            </query>
        </groupDatasource>
        <collectionDatasource id="modesDs"
                              class="com.angrysurfer.introspection.entity.Mode"
                              view="_minimal">
            <query>
                <![CDATA[select e from introspection$Mode e]]>
            </query>
        </collectionDatasource>
        <collectionDatasource id="beginStatesDs"
                              class="com.angrysurfer.introspection.entity.State"
                              view="_minimal">
            <query>
                <![CDATA[select e from introspection$State e]]>
            </query>
        </collectionDatasource>
        <collectionDatasource id="endStatesDs"
                              class="com.angrysurfer.introspection.entity.State"
                              view="_minimal">
            <query>
                <![CDATA[select e from introspection$State e]]>
            </query>
        </collectionDatasource>
    </dsContext>
    <actions>
        <action id="save"
                caption="mainMsg://actions.Ok"
                icon="icons/ok.png"
                invoke="save"
                shortcut="CTRL-ENTER"/>
        <action id="cancel"
                caption="mainMsg://actions.Cancel"
                icon="icons/cancel.png"
                invoke="cancel"/>
    </actions>
    <dialogMode height="600"
                width="800"/>
    <layout spacing="true">
        <split id="split"
               height="100%"
               orientation="horizontal"
               reversePosition="true"
               width="100%">
            <vbox id="lookupBox"
                  expand="transitionRulesTable"
                  height="100%"
                  margin="false,true,false,false"
                  spacing="true">
                <filter id="filter"
                        applyTo="transitionRulesTable"
                        datasource="transitionRulesDs">
                    <properties include=".*"/>
                </filter>
                <groupTable id="transitionRulesTable"
                            width="100%">
                    <actions>
                        <action id="create"/>
                        <action id="edit"/>
                        <action id="remove"/>
                    </actions>
                    <columns>
                        <column id="name"/>
                        <column id="mode"/>
                        <column id="beginState"/>
                        <column id="endState"/>
                    </columns>
                    <rows datasource="transitionRulesDs"/>
                    <rowsCount/>
                    <buttonsPanel id="buttonsPanel"
                                  alwaysVisible="true">
                        <button id="createBtn"
                                action="transitionRulesTable.create"/>
                        <button id="editBtn"
                                action="transitionRulesTable.edit"/>
                        <button id="removeBtn"
                                action="transitionRulesTable.remove"/>
                    </buttonsPanel>
                </groupTable>
            </vbox>
            <vbox id="detailPanel"
                  expand="editBox"
                  width="100%">
                <vbox id="editBox"
                      expand="fieldGroupBox"
                      height="100%"
                      margin="false,false,false,true"
                      spacing="true"
                      width="100%">
                    <groupBox id="fieldGroupBox"
                              caption="TransitionRule"
                              showAsPanel="true">
                        <fieldGroup id="fieldGroup"
                                    datasource="transitionRuleDs">
                            <column width="250px">
                                <field id="name"/>
                                <field id="mode"
                                       optionsDatasource="modesDs"/>
                                <field id="beginState"
                                       optionsDatasource="beginStatesDs"/>
                                <field id="endState"
                                       optionsDatasource="endStatesDs"/>
                            </column>
                        </fieldGroup>
                    </groupBox>
                    <hbox id="actionsPane"
                          spacing="true"
                          visible="false">
                        <button id="saveBtn"
                                action="save"/>
                        <button id="cancelBtn"
                                action="cancel"/>
                    </hbox>
                </vbox>
            </vbox>
        </split>
    </layout>
</window>
