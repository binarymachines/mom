<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://editorCaption"
        class="com.angrysurfer.introspection.web.transitionrule.TransitionRuleEdit"
        datasource="transitionRuleDs"
        focusComponent="fieldGroup"
        messagesPack="com.angrysurfer.introspection.web.transitionrule">
    <dsContext>
        <datasource id="transitionRuleDs"
                    class="com.angrysurfer.introspection.entity.TransitionRule"
                    view="TransitionRule-screen-view"/>
        <collectionDatasource id="modesDs"
                              class="com.angrysurfer.introspection.entity.Mode"
                              view="_minimal">
            <query>
                <![CDATA[select e from introspection$Mode e]]>
            </query>
        </collectionDatasource>
        <collectionDatasource id="beginStatesDs"
                              class="com.angrysurfer.introspection.entity.State"
                              view="_minimal">
            <query>
                <![CDATA[select e from introspection$State e]]>
            </query>
        </collectionDatasource>
        <collectionDatasource id="endStatesDs"
                              class="com.angrysurfer.introspection.entity.State"
                              view="_minimal">
            <query>
                <![CDATA[select e from introspection$State e]]>
            </query>
        </collectionDatasource>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout expand="windowActions"
            spacing="true">
        <fieldGroup id="fieldGroup"
                    datasource="transitionRuleDs">
            <column width="250px">
                <field id="name"/>
                <field id="mode"
                       optionsDatasource="modesDs"/>
                <field id="beginState"
                       optionsDatasource="beginStatesDs"/>
                <field id="endState"
                       optionsDatasource="endStatesDs"/>
            </column>
        </fieldGroup>
        <frame id="windowActions"
               screen="editWindowActions"/>
    </layout>
</window>
