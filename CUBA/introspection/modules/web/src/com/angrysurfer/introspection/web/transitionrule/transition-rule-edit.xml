<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://editorCaption"
        class="com.angrysurfer.introspection.web.transitionrule.TransitionRuleEdit"
        datasource="transitionRuleDs"
        focusComponent="fieldGroup"
        messagesPack="com.angrysurfer.introspection.web.transitionrule">
    <dsContext>
        <datasource id="transitionRuleDs"
                    class="com.angrysurfer.introspection.entity.TransitionRule"
                    view="TransitionRule-screen-view"/>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout expand="windowActions"
            spacing="true">
        <fieldGroup id="fieldGroup"
                    datasource="transitionRuleDs">
            <column width="250px">
                <field id="name"/>
                <field id="mode"/>
                <field id="beginState"/>
                <field id="endState"/>
            </column>
        </fieldGroup>
        <frame id="windowActions"
               screen="editWindowActions"/>
    </layout>
</window>
