<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://editorCaption"
        class="com.angrysurfer.introspection.web.switchrule.SwitchRuleEdit"
        datasource="switchRuleDs"
        focusComponent="fieldGroup"
        messagesPack="com.angrysurfer.introspection.web.switchrule">
    <dsContext>
        <datasource id="switchRuleDs"
                    class="com.angrysurfer.introspection.entity.SwitchRule"
                    view="SwitchRule-screen-view"/>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout expand="windowActions"
            spacing="true">
        <fieldGroup id="fieldGroup"
                    datasource="switchRuleDs">
            <column width="250px">
                <field id="name"/>
                <field id="beginMode"/>
                <field id="endMode"/>
                <field id="beforeDispatch"/>
                <field id="afterDispatch"/>
            </column>
        </fieldGroup>
        <frame id="windowActions"
               screen="editWindowActions"/>
    </layout>
</window>
