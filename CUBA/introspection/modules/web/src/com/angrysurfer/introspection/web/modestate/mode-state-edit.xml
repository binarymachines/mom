<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://editorCaption"
        class="com.angrysurfer.introspection.web.modestate.ModeStateEdit"
        datasource="modeStateDs"
        focusComponent="fieldGroup"
        messagesPack="com.angrysurfer.introspection.web.modestate">
    <dsContext>
        <datasource id="modeStateDs"
                    class="com.angrysurfer.introspection.entity.ModeState"
                    view="ModeState-screen-view"/>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout expand="windowActions"
            spacing="true">
        <fieldGroup id="fieldGroup"
                    datasource="modeStateDs">
            <column width="250px">
                <field id="pid"/>
                <field id="mode"/>
                <field id="state"/>
                <field id="timesActivated"/>
                <field id="timesCompleted"/>
                <field id="errorCount"/>
                <field id="cumErrorCount"/>
                <field id="status"/>
                <field id="lastActivated"/>
                <field id="lastActive"/>
            </column>
        </fieldGroup>
        <frame id="windowActions"
               screen="editWindowActions"/>
    </layout>
</window>
