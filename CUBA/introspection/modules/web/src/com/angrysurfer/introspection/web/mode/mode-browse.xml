<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://browseCaption"
        class="com.angrysurfer.introspection.web.mode.ModeBrowse"
        focusComponent="modesTable"
        lookupComponent="modesTable"
        messagesPack="com.angrysurfer.introspection.web.mode">
    <dsContext>
        <groupDatasource id="modesDs"
                         class="com.angrysurfer.introspection.entity.Mode"
                         view="Mode-screen-view">
            <query>
                <![CDATA[select e from introspection$Mode e]]>
            </query>
        </groupDatasource>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout expand="modesTable"
            spacing="true">
        <filter id="filter"
                applyTo="modesTable"
                datasource="modesDs">
            <properties include=".*"/>
        </filter>
        <groupTable id="modesTable"
                    width="100%">
            <actions>
                <action id="create"/>
                <action id="edit"/>
                <action id="remove"/>
            </actions>
            <columns>
                <column id="name"/>
                <column id="defaults"/>
                <column id="statefulFlag"/>
            </columns>
            <rows datasource="modesDs"/>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn"
                        action="modesTable.create"/>
                <button id="editBtn"
                        action="modesTable.edit"/>
                <button id="removeBtn"
                        action="modesTable.remove"/>
            </buttonsPanel>
        </groupTable>
    </layout>
</window>
