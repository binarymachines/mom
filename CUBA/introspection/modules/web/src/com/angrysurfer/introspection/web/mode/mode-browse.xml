<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://caption"
        class="com.angrysurfer.introspection.web.mode.ModeBrowse"
        focusComponent="modesTable"
        lookupComponent="modesTable"
        messagesPack="com.angrysurfer.introspection.web.mode">
    <dsContext>
        <datasource id="modeDs"
                    class="com.angrysurfer.introspection.entity.Mode"
                    view="mode-view"/>
        <groupDatasource id="modesDs"
                         class="com.angrysurfer.introspection.entity.Mode"
                         view="mode-view">
            <query>
                <![CDATA[select e from introspection$Mode e]]>
            </query>
        </groupDatasource>
    </dsContext>
    <actions>
        <action id="save"
                caption="mainMsg://actions.Ok"
                icon="icons/ok.png"
                invoke="save"
                shortcut="CTRL-ENTER"/>
        <action id="cancel"
                caption="mainMsg://actions.Cancel"
                icon="icons/cancel.png"
                invoke="cancel"/>
    </actions>
    <dialogMode height="600"
                width="800"/>
    <layout spacing="true">
        <split id="split"
               height="100%"
               orientation="horizontal"
               reversePosition="true"
               width="100%">
            <vbox id="lookupBox"
                  expand="modesTable"
                  height="100%"
                  margin="false,true,false,false"
                  spacing="true">
                <filter id="filter"
                        applyTo="modesTable"
                        datasource="modesDs">
                    <properties include=".*"/>
                </filter>
                <groupTable id="modesTable"
                            width="100%">
                    <actions>
                        <action id="create"/>
                        <action id="edit"/>
                        <action id="remove"/>
                    </actions>
                    <columns>
                        <column id="name"/>
                        <column id="isStateful"/>
                    </columns>
                    <rows datasource="modesDs"/>
                    <rowsCount/>
                    <buttonsPanel id="buttonsPanel"
                                  alwaysVisible="true">
                        <button id="createBtn"
                                action="modesTable.create"/>
                        <button id="editBtn"
                                action="modesTable.edit"/>
                        <button id="removeBtn"
                                action="modesTable.remove"/>
                    </buttonsPanel>
                </groupTable>
            </vbox>
            <vbox id="detailPanel"
                  expand="editBox"
                  width="100%">
                <vbox id="editBox"
                      expand="fieldGroupBox"
                      height="100%"
                      margin="false,false,false,true"
                      spacing="true"
                      width="100%">
                    <groupBox id="fieldGroupBox"
                              caption="Mode"
                              showAsPanel="true">
                        <fieldGroup id="fieldGroup"
                                    datasource="modeDs">
                            <column width="250px">
                                <field id="name"/>
                                <field id="isStateful"/>
                            </column>
                        </fieldGroup>
                    </groupBox>
                    <hbox id="actionsPane"
                          spacing="true"
                          visible="false">
                        <button id="saveBtn"
                                action="save"/>
                        <button id="cancelBtn"
                                action="cancel"/>
                    </hbox>
                </vbox>
            </vbox>
        </split>
    </layout>
</window>
