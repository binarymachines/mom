<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://browseCaption"
        class="com.angrysurfer.introspection.web.dispatch.DispatchBrowse"
        focusComponent="dispatchesTable"
        lookupComponent="dispatchesTable"
        messagesPack="com.angrysurfer.introspection.web.dispatch">
    <dsContext>
        <groupDatasource id="dispatchesDs"
                         class="com.angrysurfer.introspection.entity.Dispatch"
                         view="_local">
            <query>
                <![CDATA[select e from introspection$Dispatch e]]>
            </query>
        </groupDatasource>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout expand="dispatchesTable"
            spacing="true">
        <filter id="filter"
                applyTo="dispatchesTable"
                datasource="dispatchesDs">
            <properties include=".*"/>
        </filter>
        <groupTable id="dispatchesTable"
                    width="100%">
            <actions>
                <action id="create"/>
                <action id="edit"/>
                <action id="remove"/>
            </actions>
            <columns>
                <column id="name"/>
                <column id="category"/>
                <column id="packageName"/>
                <column id="moduleName"/>
                <column id="className"/>
                <column id="functionName"/>
            </columns>
            <rows datasource="dispatchesDs"/>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn"
                        action="dispatchesTable.create"/>
                <button id="editBtn"
                        action="dispatchesTable.edit"/>
                <button id="removeBtn"
                        action="dispatchesTable.remove"/>
            </buttonsPanel>
        </groupTable>
    </layout>
</window>
