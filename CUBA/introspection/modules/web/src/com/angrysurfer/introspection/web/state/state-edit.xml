<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://editorCaption"
        class="com.angrysurfer.introspection.web.state.StateEdit"
        datasource="stateDs"
        focusComponent="fieldGroup"
        messagesPack="com.angrysurfer.introspection.web.state">
    <dsContext>
        <datasource id="stateDs"
                    class="com.angrysurfer.introspection.entity.State"
                    view="_local"/>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout expand="windowActions"
            spacing="true">
        <fieldGroup id="fieldGroup"
                    datasource="stateDs">
            <column width="250px">
                <field id="name"/>
                <field id="initialStateFlag"/>
                <field id="terminalStateFlag"/>
            </column>
        </fieldGroup>
        <frame id="windowActions"
               screen="editWindowActions"/>
    </layout>
</window>
