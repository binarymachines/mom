<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="Edit ES Query"
        class="com.angrysurfer.mildred.cuba.actions.web.essearchspec.EsSearchSpecEdit"
        datasource="esSearchSpecDs"
        focusComponent="fieldGroup"
        messagesPack="com.angrysurfer.mildred.cuba.actions.web.essearchspec">
    <dsContext>
        <datasource id="esSearchSpecDs"
                    class="com.angrysurfer.mildred.cuba.actions.entity.EsSearchSpec"
                    view="_local"/>
    </dsContext>
    <dialogMode height="225"
                width="425"/>
    <layout expand="windowActions"
            margin="true"
            spacing="true">
        <fieldGroup id="fieldGroup"
                    datasource="esSearchSpecDs">
            <column width="250px">
                <field id="name"/>
                <field id="queryType"/>
                <field id="maxScorePercentage"/>
                <field id="appliesToFileType"/>
                <field id="activeFlag"/>
            </column>
        </fieldGroup>
        <frame id="windowActions"
               screen="editWindowActions"/>
    </layout>
</window>
