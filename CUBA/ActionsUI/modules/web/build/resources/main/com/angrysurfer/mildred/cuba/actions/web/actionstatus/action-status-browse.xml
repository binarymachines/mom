<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="Action States"
        class="com.angrysurfer.mildred.cuba.actions.web.actionstatus.ActionStatusBrowse"
        focusComponent="actionStatusesTable"
        lookupComponent="actionStatusesTable"
        messagesPack="com.angrysurfer.mildred.cuba.actions.web.actionstatus">
    <dsContext>
        <collectionDatasource id="actionStatusesDs"
                              class="com.angrysurfer.mildred.cuba.actions.entity.ActionStatus"
                              view="_local">
            <query>
                <![CDATA[select e from actions$ActionStatus e]]>
            </query>
        </collectionDatasource>
    </dsContext>
    <dialogMode height="300"
                width="275"/>
    <layout expand="actionStatusesTable"
            spacing="true">
        <filter id="filter"
                applyTo="actionStatusesTable"
                datasource="actionStatusesDs">
            <properties include=".*"/>
        </filter>
        <table id="actionStatusesTable"
               width="100%">
            <actions>
                <action id="create"
                        openType="DIALOG"/>
                <action id="edit"
                        openType="DIALOG"/>
                <action id="remove"/>
            </actions>
            <columns>
                <column id="name"/>
            </columns>
            <rows datasource="actionStatusesDs"/>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn"
                        action="actionStatusesTable.create"/>
                <button id="editBtn"
                        action="actionStatusesTable.edit"/>
                <button id="removeBtn"
                        action="actionStatusesTable.remove"/>
            </buttonsPanel>
        </table>
    </layout>
</window>
