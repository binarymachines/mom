<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="Edit Action State"
        class="com.angrysurfer.mildred.cuba.actions.web.actionstatus.ActionStatusEdit"
        datasource="actionStatusDs"
        focusComponent="fieldGroup"
        messagesPack="com.angrysurfer.mildred.cuba.actions.web.actionstatus">
    <dsContext>
        <datasource id="actionStatusDs"
                    class="com.angrysurfer.mildred.cuba.actions.entity.ActionStatus"
                    view="_local"/>
    </dsContext>
    <dialogMode height="110"
                width="320"/>
    <layout expand="windowActions"
            margin="true"
            spacing="true">
        <fieldGroup id="fieldGroup"
                    datasource="actionStatusDs">
            <column width="250px">
                <field id="name"/>
            </column>
        </fieldGroup>
        <frame id="windowActions"
               screen="editWindowActions"/>
    </layout>
</window>
