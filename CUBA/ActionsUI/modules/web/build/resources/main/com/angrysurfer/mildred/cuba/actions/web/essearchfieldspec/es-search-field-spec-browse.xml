<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="ES Query Fields"
        class="com.angrysurfer.mildred.cuba.actions.web.essearchfieldspec.EsSearchFieldSpecBrowse"
        focusComponent="esSearchFieldSpecsTable"
        lookupComponent="esSearchFieldSpecsTable"
        messagesPack="com.angrysurfer.mildred.cuba.actions.web.essearchfieldspec">
    <dsContext>
        <collectionDatasource id="esSearchFieldSpecsDs"
                              class="com.angrysurfer.mildred.cuba.actions.entity.EsSearchFieldSpec"
                              view="_local">
            <query>
                <![CDATA[select e from actions$EsSearchFieldSpec e]]>
            </query>
        </collectionDatasource>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout expand="esSearchFieldSpecsTable"
            margin="true"
            spacing="true">
        <filter id="filter"
                applyTo="esSearchFieldSpecsTable"
                datasource="esSearchFieldSpecsDs">
            <properties include=".*"/>
        </filter>
        <table id="esSearchFieldSpecsTable"
               width="100%">
            <actions>
                <action id="create"
                        openType="DIALOG"/>
                <action id="edit"
                        openType="DIALOG"/>
                <action id="remove"/>
            </actions>
            <columns>
                <column id="fieldName"/>
                <column id="boost"/>
                <column id="bool"/>
                <column id="operator"/>
                <column id="minimumShouldMatch"/>
                <column id="analyzer"/>
                <column id="querySection"/>
                <column id="defaultValue"/>
            </columns>
            <rows datasource="esSearchFieldSpecsDs"/>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn"
                        action="esSearchFieldSpecsTable.create"/>
                <button id="editBtn"
                        action="esSearchFieldSpecsTable.edit"/>
                <button id="removeBtn"
                        action="esSearchFieldSpecsTable.remove"/>
            </buttonsPanel>
        </table>
    </layout>
</window>
