<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://editorCaption"
        class="com.angrysurfer.mildred.cuba.actions.web.metaaction.MetaActionEdit"
        datasource="metaActionDs"
        focusComponent="fieldGroup"
        messagesPack="com.angrysurfer.mildred.cuba.actions.web.metaaction">
    <dsContext>
        <datasource id="metaActionDs"
                    class="com.angrysurfer.mildred.cuba.actions.entity.MetaAction"
                    view="_local"/>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout expand="windowActions"
            spacing="true">
        <fieldGroup id="fieldGroup"
                    datasource="metaActionDs">
            <column width="250px">
                <field id="documentType"/>
                <field id="name"/>
                <field id="priority"/>
            </column>
        </fieldGroup>
        <frame id="windowActions"
               screen="editWindowActions"/>
    </layout>
</window>
