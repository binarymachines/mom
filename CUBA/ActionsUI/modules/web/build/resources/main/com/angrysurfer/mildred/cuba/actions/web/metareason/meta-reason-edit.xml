<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="Edit Reason"
        class="com.angrysurfer.mildred.cuba.actions.web.metareason.MetaReasonEdit"
        datasource="metaReasonDs"
        focusComponent="fieldGroup"
        messagesPack="com.angrysurfer.mildred.cuba.actions.web.metareason">
    <dsContext>
        <datasource id="metaReasonDs"
                    class="com.angrysurfer.mildred.cuba.actions.entity.MetaReason"
                    view="MetaReason-screen-view">
            <collectionDatasource id="vectorParamDs"
                                  property="vectorParam"/>
        </datasource>
        <collectionDatasource id="parentMetaReasonsDs"
                              class="com.angrysurfer.mildred.cuba.actions.entity.MetaReason"
                              view="_minimal">
            <query>
                <![CDATA[select e from actions$MetaReason e 
order by e.name]]>
            </query>
        </collectionDatasource>
        <collectionDatasource id="esSearchSpecsDs"
                              class="com.angrysurfer.mildred.cuba.actions.entity.EsSearchSpec"
                              view="_minimal">
            <query>
                <![CDATA[select e from actions$EsSearchSpec e order by e.name]]>
            </query>
        </collectionDatasource>
        <collectionDatasource id="dispatchesDs"
                              class="com.angrysurfer.mildred.cuba.actions.entity.ActionDispatch"
                              view="_minimal">
            <query>
                <![CDATA[select e from actions$ActionDispatch e
where e.category = "CONDITION"
order by e.name]]>
            </query>
        </collectionDatasource>
    </dsContext>
    <dialogMode height="430"
                width="770"/>
    <layout expand="windowActions"
            margin="true"
            spacing="true">
        <fieldGroup id="fieldGroup"
                    datasource="metaReasonDs">
            <column width="250px">
                <field id="name"/>
                <field id="parentMetaReason"
                       caption="Parent Reason"
                       optionsDatasource="parentMetaReasonsDs"/>
                <field id="documentType"/>
                <field id="weight"/>
            </column>
            <column width="250px">
                <field id="dispatch"
                       caption="Condition Function"
                       optionsDatasource="dispatchesDs"/>
                <field id="expectedResult"
                       caption="CF Returns True"/>
                <field id="esSearchSpec"
                       caption="Elasticsearch Query"
                       optionsDatasource="esSearchSpecsDs"/>
            </column>
        </fieldGroup>
        <groupBox id="vectorParamBox"
                  caption="Vector Parameters">
            <table id="vectorParamTable"
                   height="200px"
                   width="100%">
                <actions>
                    <action id="add"
                            openType="DIALOG"/>
                    <action id="remove"/>
                </actions>
                <columns>
                    <column id="name"/>
                </columns>
                <rows datasource="vectorParamDs"/>
                <buttonsPanel>
                    <button action="vectorParamTable.add"/>
                    <button action="vectorParamTable.remove"/>
                </buttonsPanel>
            </table>
        </groupBox>
        <frame id="windowActions"
               screen="editWindowActions"/>
    </layout>
</window>
