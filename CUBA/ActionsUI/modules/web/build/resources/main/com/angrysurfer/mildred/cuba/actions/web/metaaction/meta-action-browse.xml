<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="Actions"
        class="com.angrysurfer.mildred.cuba.actions.web.metaaction.MetaActionBrowse"
        focusComponent="metaActionsTable"
        lookupComponent="metaActionsTable"
        messagesPack="com.angrysurfer.mildred.cuba.actions.web.metaaction">
    <dsContext>
        <collectionDatasource id="metaActionsDs"
                              class="com.angrysurfer.mildred.cuba.actions.entity.MetaAction"
                              view="MetaAction-screen-view">
            <query>
                <![CDATA[select e from actions$MetaAction e]]>
            </query>
        </collectionDatasource>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout expand="metaActionsTable"
            spacing="true">
        <filter id="filter"
                applyTo="metaActionsTable"
                datasource="metaActionsDs">
            <properties include=".*"/>
        </filter>
        <table id="metaActionsTable"
               width="100%">
            <actions>
                <action id="create"
                        openType="DIALOG"/>
                <action id="edit"
                        openType="DIALOG"/>
                <action id="remove"/>
            </actions>
            <columns>
                <column id="name"/>
                <column id="documentType"/>
                <column id="dispatch"/>
                <column id="priority"/>
            </columns>
            <rows datasource="metaActionsDs"/>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn"
                        action="metaActionsTable.create"/>
                <button id="editBtn"
                        action="metaActionsTable.edit"/>
                <button id="removeBtn"
                        action="metaActionsTable.remove"/>
            </buttonsPanel>
        </table>
    </layout>
</window>
