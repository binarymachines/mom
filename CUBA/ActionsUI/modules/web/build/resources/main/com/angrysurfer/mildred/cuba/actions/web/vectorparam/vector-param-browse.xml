<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="Vector Parameters"
        class="com.angrysurfer.mildred.cuba.actions.web.vectorparam.VectorParamBrowse"
        focusComponent="vectorParamsTable"
        lookupComponent="vectorParamsTable"
        messagesPack="com.angrysurfer.mildred.cuba.actions.web.vectorparam">
    <dsContext>
        <collectionDatasource id="vectorParamsDs"
                              class="com.angrysurfer.mildred.cuba.actions.entity.VectorParam"
                              view="_local">
            <query>
                <![CDATA[select e from actions$VectorParam e]]>
            </query>
        </collectionDatasource>
    </dsContext>
    <dialogMode height="300"
                width="500"/>
    <layout expand="vectorParamsTable"
            margin="true"
            spacing="true">
        <filter id="filter"
                applyTo="vectorParamsTable"
                datasource="vectorParamsDs">
            <properties include=".*"/>
        </filter>
        <table id="vectorParamsTable"
               width="100%">
            <actions>
                <action id="create"
                        openType="DIALOG"/>
                <action id="edit"
                        openType="DIALOG"/>
                <action id="remove"/>
            </actions>
            <columns>
                <column id="name"/>
            </columns>
            <rows datasource="vectorParamsDs"/>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn"
                        action="vectorParamsTable.create"/>
                <button id="editBtn"
                        action="vectorParamsTable.edit"/>
                <button id="removeBtn"
                        action="vectorParamsTable.remove"/>
            </buttonsPanel>
        </table>
    </layout>
</window>
