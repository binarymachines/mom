<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://browseCaption"
        class="com.angrysurfer.mildred.cuba.actions.web.actiondispatch.ActionDispatchBrowse"
        focusComponent="actionDispatchesTable"
        lookupComponent="actionDispatchesTable"
        messagesPack="com.angrysurfer.mildred.cuba.actions.web.actiondispatch">
    <dsContext>
        <collectionDatasource id="actionDispatchesDs"
                              class="com.angrysurfer.mildred.cuba.actions.entity.ActionDispatch"
                              view="_local">
            <query>
                <![CDATA[select e from actions$ActionDispatch e]]>
            </query>
        </collectionDatasource>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout expand="actionDispatchesTable"
            spacing="true">
        <filter id="filter"
                applyTo="actionDispatchesTable"
                datasource="actionDispatchesDs">
            <properties include=".*"/>
        </filter>
        <table id="actionDispatchesTable"
               width="100%">
            <actions>
                <action id="create"/>
                <action id="edit"/>
                <action id="remove"/>
            </actions>
            <columns>
                <column id="name"/>
                <column id="category"/>
                <column id="packageName"/>
                <column id="moduleName"/>
                <column id="className"/>
                <column id="funcName"/>
            </columns>
            <rows datasource="actionDispatchesDs"/>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn"
                        action="actionDispatchesTable.create"/>
                <button id="editBtn"
                        action="actionDispatchesTable.edit"/>
                <button id="removeBtn"
                        action="actionDispatchesTable.remove"/>
            </buttonsPanel>
        </table>
    </layout>
</window>
