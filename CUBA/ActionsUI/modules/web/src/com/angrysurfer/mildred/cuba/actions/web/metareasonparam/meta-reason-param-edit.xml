<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://editCaption"
        class="com.angrysurfer.mildred.cuba.actions.web.metareasonparam.MetaReasonParamEdit"
        datasource="metaReasonParamDs"
        focusComponent="fieldGroup"
        messagesPack="com.angrysurfer.mildred.cuba.actions.web.metareasonparam">
    <dsContext>
        <datasource id="metaReasonParamDs"
                    class="com.angrysurfer.mildred.cuba.actions.entity.MetaReasonParam"
                    view="_local"/>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout expand="windowActions"
            spacing="true">
        <fieldGroup id="fieldGroup"
                    datasource="metaReasonParamDs">
            <column width="250px">
                <field id="vectorParamName"/>
                <field id="metaReason"/>
            </column>
        </fieldGroup>
        <frame id="windowActions"
               screen="editWindowActions"/>
    </layout>
</window>
