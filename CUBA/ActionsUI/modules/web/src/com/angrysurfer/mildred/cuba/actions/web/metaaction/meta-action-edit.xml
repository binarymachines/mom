<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://editCaption"
        class="com.angrysurfer.mildred.cuba.actions.web.metaaction.MetaActionEdit"
        datasource="metaActionDs"
        focusComponent="fieldGroup"
        messagesPack="com.angrysurfer.mildred.cuba.actions.web.metaaction">
    <dsContext>
        <datasource id="metaActionDs"
                    class="com.angrysurfer.mildred.cuba.actions.entity.MetaAction"
                    view="MetaAction-screen-view">
            <collectionDatasource id="metaReasonDs"
                                  property="metaReason"/>
            <collectionDatasource id="vectorParamDs"
                                  property="vectorParam"/>
        </datasource>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout expand="windowActions"
            spacing="true">
        <fieldGroup id="fieldGroup"
                    datasource="metaActionDs">
            <column width="250px">
                <field id="name"/>
                <field id="documentType"/>
                <field id="dispatch"/>
                <field id="priority"/>
            </column>
        </fieldGroup>
        <groupBox id="metaReasonBox"
                  caption="msg://com.angrysurfer.mildred.cuba.actions.entity/MetaAction.metaReason">
            <table id="metaReasonTable"
                   height="200px"
                   width="100%">
                <actions>
                    <action id="add"/>
                    <action id="remove"/>
                </actions>
                <columns>
                    <column id="name"/>
                </columns>
                <rows datasource="metaReasonDs"/>
                <buttonsPanel>
                    <button action="metaReasonTable.add"/>
                    <button action="metaReasonTable.remove"/>
                </buttonsPanel>
            </table>
        </groupBox>
        <groupBox id="vectorParamBox"
                  caption="msg://com.angrysurfer.mildred.cuba.actions.entity/MetaAction.vectorParam">
            <table id="vectorParamTable"
                   height="200px"
                   width="100%">
                <actions>
                    <action id="add"/>
                    <action id="remove"/>
                </actions>
                <columns>
                    <column id="name"/>
                </columns>
                <rows datasource="vectorParamDs"/>
                <buttonsPanel>
                    <button action="vectorParamTable.add"/>
                    <button action="vectorParamTable.remove"/>
                </buttonsPanel>
            </table>
        </groupBox>
        <frame id="windowActions"
               screen="editWindowActions"/>
    </layout>
</window>
