<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://editCaption"
        class="com.angrysurfer.mildred.cuba.actions.web.metaactionparam.MetaActionParamEdit"
        datasource="metaActionParamDs"
        focusComponent="fieldGroup"
        messagesPack="com.angrysurfer.mildred.cuba.actions.web.metaactionparam">
    <dsContext>
        <datasource id="metaActionParamDs"
                    class="com.angrysurfer.mildred.cuba.actions.entity.MetaActionParam"
                    view="MetaActionParam-screen-view"/>
        <collectionDatasource id="metaActionsDs"
                              class="com.angrysurfer.mildred.cuba.actions.entity.MetaAction"
                              view="_minimal">
            <query>
                <![CDATA[select e from actionsui$MetaAction e]]>
            </query>
        </collectionDatasource>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout expand="windowActions"
            spacing="true">
        <fieldGroup id="fieldGroup"
                    datasource="metaActionParamDs">
            <column width="250px">
                <field id="metaAction"
                       optionsDatasource="metaActionsDs"/>
                <field id="vectorParamName"/>
            </column>
        </fieldGroup>
        <frame id="windowActions"
               screen="editWindowActions"/>
    </layout>
</window>
