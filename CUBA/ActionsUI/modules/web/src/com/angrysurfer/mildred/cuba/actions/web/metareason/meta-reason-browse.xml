<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="Reasons"
        class="com.angrysurfer.mildred.cuba.actions.web.metareason.MetaReasonBrowse"
        focusComponent="metaReasonsTable"
        lookupComponent="metaReasonsTable"
        messagesPack="com.angrysurfer.mildred.cuba.actions.web.metareason">
    <dsContext>
        <collectionDatasource id="metaReasonsDs"
                              class="com.angrysurfer.mildred.cuba.actions.entity.MetaReason"
                              view="MetaReason-screen-view">
            <query>
                <![CDATA[select e from actions$MetaReason e]]>
            </query>
        </collectionDatasource>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout expand="metaReasonsTable"
            margin="true"
            spacing="true">
        <filter id="filter"
                applyTo="metaReasonsTable"
                datasource="metaReasonsDs">
            <properties include=".*"/>
        </filter>
        <table id="metaReasonsTable"
               editable="true"
               width="100%">
            <actions>
                <action id="create"
                        openType="DIALOG"/>
                <action id="edit"
                        openType="DIALOG"/>
                <action id="remove"/>
            </actions>
            <columns>
                <column id="name"/>
                <column id="parentMetaReason"
                        caption="Parent Reason"/>
                <column id="documentType"/>
                <column id="weight"/>
                <column id="dispatch"
                        caption="Condition Function"/>
                <column id="expectedResult"
                        caption="CF Returns True"/>
                <column id="esSearchSpec"
                        caption="Elasticsearch Query"/>
            </columns>
            <rows datasource="metaReasonsDs"/>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn"
                        action="metaReasonsTable.create"/>
                <button id="editBtn"
                        action="metaReasonsTable.edit"/>
                <button id="removeBtn"
                        action="metaReasonsTable.remove"/>
            </buttonsPanel>
        </table>
    </layout>
</window>
