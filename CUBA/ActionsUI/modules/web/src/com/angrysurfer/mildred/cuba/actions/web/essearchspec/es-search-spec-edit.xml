<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://editCaption"
        class="com.angrysurfer.mildred.cuba.actions.web.essearchspec.EsSearchSpecEdit"
        datasource="esSearchSpecDs"
        focusComponent="fieldGroup"
        messagesPack="com.angrysurfer.mildred.cuba.actions.web.essearchspec">
    <dsContext>
        <datasource id="esSearchSpecDs"
                    class="com.angrysurfer.mildred.cuba.actions.entity.EsSearchSpec"
                    view="esSearchSpec-view">
            <collectionDatasource id="esSearchFieldSpecDs"
                                  property="esSearchFieldSpec"/>
        </datasource>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout expand="windowActions"
            spacing="true">
        <fieldGroup id="fieldGroup"
                    datasource="esSearchSpecDs">
            <column width="250px">
                <field id="name"/>
                <field id="queryType"/>
                <field id="maxScorePercentage"/>
                <field id="appliesToFileType"/>
                <field id="activeFlag"/>
            </column>
        </fieldGroup>
        <groupBox id="esSearchFieldSpecBox"
                  caption="msg://editCaption">
            <table id="esSearchFieldSpecTable"
                   height="200px"
                   width="100%">
                <actions>
                    <action id="add"/>
                    <action id="remove"/>
                </actions>
                <columns>
                    <column id="fieldName"/>
                    <column id="boost"/>
                    <column id="bool"/>
                    <column id="operator"/>
                    <column id="minimumShouldMatch"/>
                    <column id="analyzer"/>
                    <column id="querySection"/>
                    <column id="defaultValue"/>
                </columns>
                <rows datasource="esSearchFieldSpecDs"/>
                <buttonsPanel>
                    <button action="esSearchFieldSpecTable.add"/>
                    <button action="esSearchFieldSpecTable.remove"/>
                </buttonsPanel>
            </table>
        </groupBox>
        <frame id="windowActions"
               screen="editWindowActions"/>
    </layout>
</window>
