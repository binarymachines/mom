<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://editCaption"
        class="com.angrysurfer.mildred.cuba.actions.web.essearchfieldspec.EsSearchFieldSpecEdit"
        datasource="esSearchFieldSpecDs"
        focusComponent="fieldGroup"
        messagesPack="com.angrysurfer.mildred.cuba.actions.web.essearchfieldspec">
    <dsContext>
        <datasource id="esSearchFieldSpecDs"
                    class="com.angrysurfer.mildred.cuba.actions.entity.EsSearchFieldSpec"
                    view="_local"/>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout expand="windowActions"
            spacing="true">
        <fieldGroup id="fieldGroup"
                    datasource="esSearchFieldSpecDs">
            <column width="250px">
                <field id="fieldName"/>
                <field id="boost"/>
                <field id="bool"/>
                <field id="operator"/>
                <field id="minimumShouldMatch"/>
                <field id="analyzer"/>
                <field id="querySection"/>
                <field id="defaultValue"/>
            </column>
        </fieldGroup>
        <frame id="windowActions"
               screen="editWindowActions"/>
    </layout>
</window>
