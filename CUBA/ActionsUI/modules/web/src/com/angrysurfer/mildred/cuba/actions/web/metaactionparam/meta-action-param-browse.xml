<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://browseCaption"
        class="com.angrysurfer.mildred.cuba.actions.web.metaactionparam.MetaActionParamBrowse"
        focusComponent="metaActionParamsTable"
        lookupComponent="metaActionParamsTable"
        messagesPack="com.angrysurfer.mildred.cuba.actions.web.metaactionparam">
    <dsContext>
        <collectionDatasource id="metaActionParamsDs"
                              class="com.angrysurfer.mildred.cuba.actions.entity.MetaActionParam"
                              view="MetaActionParam-screen-view">
            <query>
                <![CDATA[select e from actionsui$MetaActionParam e]]>
            </query>
        </collectionDatasource>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout expand="metaActionParamsTable"
            spacing="true">
        <filter id="filter"
                applyTo="metaActionParamsTable"
                datasource="metaActionParamsDs">
            <properties include=".*"/>
        </filter>
        <table id="metaActionParamsTable"
               width="100%">
            <actions>
                <action id="create"/>
                <action id="edit"/>
                <action id="remove"/>
            </actions>
            <columns>
                <column id="vectorParamName"/>
                <column id="metaAction"/>
            </columns>
            <rows datasource="metaActionParamsDs"/>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn"
                        action="metaActionParamsTable.create"/>
                <button id="editBtn"
                        action="metaActionParamsTable.edit"/>
                <button id="removeBtn"
                        action="metaActionParamsTable.remove"/>
            </buttonsPanel>
        </table>
    </layout>
</window>
