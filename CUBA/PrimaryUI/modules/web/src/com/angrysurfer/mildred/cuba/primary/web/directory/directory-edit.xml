<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="Edit Directory"
        class="com.angrysurfer.mildred.cuba.primary.web.directory.DirectoryEdit"
        datasource="directoryDs"
        messagesPack="com.angrysurfer.mildred.cuba.primary.web.directory">
    <dsContext>
        <datasource id="directoryDs"
                    class="com.angrysurfer.mildred.cuba.primary.entity.Directory"
                    view="Directory-screen-view"/>
        <collectionDatasource id="fileTypesDs"
                              class="com.angrysurfer.mildred.cuba.primary.entity.FileType"
                              view="_minimal">
            <query>
                <![CDATA[select e from primary$FileType e]]>
            </query>
        </collectionDatasource>
    </dsContext>
    <dialogMode height="175"
                width="595"/>
    <layout expand="windowActions"
            margin="true"
            spacing="true">
        <fieldGroup id="fieldGroup1"
                    datasource="directoryDs"
                    width="654px">
            <column>
                <field id="name"
                       caption="Name"
                       width="500px"/>
            </column>
        </fieldGroup>
        <fieldGroup id="fieldGroup2"
                    datasource="directoryDs"
                    width="549px">
            <column>
                <field id="indexName"
                       caption="Index"
                       width="85px"/>
            </column>
            <column>
                <field id="fileType"
                       caption="File Type"
                       optionsDatasource="fileTypesDs"
                       width="75px"/>
            </column>
            <column>
                <field id="categoryPrototypeFlag"
                       caption="Category Prototype"
                       width="20px"/>
            </column>
            <column>
                <field id="activeFlag"
                       caption="Active"
                       width="20px"/>
            </column>
        </fieldGroup>
        <frame id="windowActions"
               screen="editWindowActions"/>
    </layout>
</window>
