<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://editCaption"
        class="com.angrysurfer.mildred.cuba.primary.web.matcher.MatcherEdit"
        datasource="matcherDs"
        focusComponent="fieldGroup"
        messagesPack="com.angrysurfer.mildred.cuba.primary.web.matcher">
    <dsContext>
        <datasource id="matcherDs"
                    class="com.angrysurfer.mildred.cuba.primary.entity.Matcher"
                    view="_local"/>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout expand="windowActions"
            spacing="true">
        <fieldGroup id="fieldGroup"
                    datasource="matcherDs">
            <column width="250px">
                <field id="indexName"/>
                <field id="name"/>
                <field id="queryType"/>
                <field id="maxScorePercentage"/>
                <field id="appliesToFileType"/>
                <field id="activeFlag"/>
            </column>
        </fieldGroup>
        <frame id="windowActions"
               screen="editWindowActions"/>
    </layout>
</window>
