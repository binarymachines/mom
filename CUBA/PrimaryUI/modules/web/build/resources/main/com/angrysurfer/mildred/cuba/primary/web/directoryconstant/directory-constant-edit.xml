<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://editCaption"
        class="com.angrysurfer.mildred.cuba.primary.web.directoryconstant.DirectoryConstantEdit"
        datasource="directoryConstantDs"
        focusComponent="fieldGroup"
        messagesPack="com.angrysurfer.mildred.cuba.primary.web.directoryconstant">
    <dsContext>
        <datasource id="directoryConstantDs"
                    class="com.angrysurfer.mildred.cuba.primary.entity.DirectoryConstant"
                    view="_local"/>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout expand="windowActions"
            spacing="true">
        <fieldGroup id="fieldGroup"
                    datasource="directoryConstantDs">
            <column width="250px">
                <field id="indexName"/>
                <field id="pattern"/>
                <field id="locationType"/>
            </column>
        </fieldGroup>
        <frame id="windowActions"
               screen="editWindowActions"/>
    </layout>
</window>
