<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://editCaption"
        class="com.angrysurfer.mildred.cuba.primary.web.documentcategory.DocumentCategoryEdit"
        datasource="documentCategoryDs"
        focusComponent="fieldGroup"
        messagesPack="com.angrysurfer.mildred.cuba.primary.web.documentcategory">
    <dsContext>
        <datasource id="documentCategoryDs"
                    class="com.angrysurfer.mildred.cuba.primary.entity.DocumentCategory"
                    view="_local"/>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout expand="windowActions"
            spacing="true">
        <fieldGroup id="fieldGroup"
                    datasource="documentCategoryDs">
            <column width="250px">
                <field id="indexName"/>
                <field id="name"/>
                <field id="documentType"/>
            </column>
        </fieldGroup>
        <frame id="windowActions"
               screen="editWindowActions"/>
    </layout>
</window>
