<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://editCaption"
        class="com.angrysurfer.mildred.cuba.primary.web.matcherfield.MatcherFieldEdit"
        datasource="matcherFieldDs"
        focusComponent="fieldGroup"
        messagesPack="com.angrysurfer.mildred.cuba.primary.web.matcherfield">
    <dsContext>
        <datasource id="matcherFieldDs"
                    class="com.angrysurfer.mildred.cuba.primary.entity.MatcherField"
                    view="MatcherField-screen-view"/>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout expand="scrollBox"
            spacing="true">
        <scrollBox id="scrollBox"
                   spacing="true">
            <fieldGroup id="fieldGroup"
                        datasource="matcherFieldDs">
                <column width="250px">
                    <field id="indexName"/>
                    <field id="documentType"/>
                    <field id="matcher"/>
                    <field id="fieldName"/>
                    <field id="boost"/>
                    <field id="bool"/>
                    <field id="operator"/>
                    <field id="minimumShouldMatch"/>
                    <field id="analyzer"/>
                    <field id="querySection"/>
                    <field id="defaultValue"/>
                </column>
            </fieldGroup>
        </scrollBox>
        <frame id="windowActions"
               screen="editWindowActions"/>
    </layout>
</window>
